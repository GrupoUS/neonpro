{
  "version": 2,
  "buildCommand": "bunx turbo build --filter=@neonpro/web",
  "outputDirectory": "apps/web/dist",
  "installCommand": "bun install",
  "framework": null,
  "functions": {},
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}