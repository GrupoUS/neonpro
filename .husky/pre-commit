#!/usr/bin/env bash
# NeonPro Pre-commit Hook (stabilized)
# Focused on lightweight checks so commits are not blocked by legacy issues

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

if [[ -n "$SKIP_NEONPRO_HOOKS" ]]; then
  echo -e "${YELLOW}‚ö†Ô∏è  Skipping NeonPro pre-commit checks (SKIP_NEONPRO_HOOKS detected).${NC}"
  exit 0
fi

echo -e "${BLUE}üîç Running streamlined NeonPro quality checks...${NC}"

# Basic sensitive data guard for staged TS/TSX files
STAGED_TS=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\\.(ts|tsx)$' || true)
if [[ -n "$STAGED_TS" ]]; then
  if echo "$STAGED_TS" | xargs -r grep -InE 'cpf|rg|email|telefone|endereco' >/dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  Potential sensitive data detected in staged files. Please double-check for LGPD compliance.${NC}"
  fi
fi

# Lightweight formatting / linting via Biome
if command -v bun >/dev/null; then
  echo -e "${YELLOW}üìù Validating formatting with Biome...${NC}"
  if ! bunx biome check --reporter summary >/tmp/neonpro_biome.log 2>&1; then
    echo -e "${YELLOW}‚ÑπÔ∏è  Biome found issues; attempting auto-fix...${NC}"
    if bunx biome check --apply >/tmp/neonpro_biome_fix.log 2>&1; then
      echo -e "${GREEN}‚úÖ Biome auto-fixed formatting. Please review and restage affected files.${NC}"
      exit 1
    else
      echo -e "${RED}‚ùå Biome unable to auto-fix formatting issues. See /tmp/neonpro_biome_fix.log for details.${NC}"
      exit 1
    fi
  else
    echo -e "${GREEN}‚úÖ Biome formatting check passed${NC}"
  fi
else
  echo -e "${YELLOW}‚ö†Ô∏è  Bun not available; skipping Biome formatting check.${NC}"
fi

echo -e "${GREEN}üéâ Streamlined NeonPro checks complete. Proceeding with commit.${NC}"
