#!/usr/bin/env bash
# NeonPro Enhanced Pre-push Hook
# Following Husky v9+ best practices with healthcare compliance

set -e  # Exit on any error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}ğŸš€ Running NeonPro Pre-push Validation...${NC}"

# 1. Run comprehensive test suite
echo -e "${YELLOW}ğŸ§ª Running comprehensive test suite...${NC}"
if ! pnpm test; then
    echo -e "${RED}âŒ Tests failed! Please fix failing tests before pushing.${NC}"
    exit 1
fi
echo -e "${GREEN}âœ… All tests passed${NC}"

# 2. Healthcare Compliance Tests
echo -e "${YELLOW}ğŸ¥ Running healthcare compliance tests...${NC}"
if command -v pnpm test:healthcare-compliance &> /dev/null; then
    if ! pnpm test:healthcare-compliance; then
        echo -e "${YELLOW}âš ï¸ Healthcare compliance tests had issues (non-blocking)${NC}"
    else
        echo -e "${GREEN}âœ… Healthcare compliance tests passed${NC}"
    fi
else
    echo -e "${BLUE}â„¹ï¸ Healthcare compliance tests not available${NC}"
fi

# 3. Security Compliance Tests
echo -e "${YELLOW}ğŸ›¡ï¸ Running security compliance tests...${NC}"
if command -v pnpm test:security-compliance &> /dev/null; then
    if ! pnpm test:security-compliance; then
        echo -e "${YELLOW}âš ï¸ Security compliance tests had issues (non-blocking)${NC}"
    else
        echo -e "${GREEN}âœ… Security compliance tests passed${NC}"
    fi
else
    echo -e "${BLUE}â„¹ï¸ Security compliance tests not available${NC}"
fi

# 4. Build Critical Packages (to ensure they compile)
echo -e "${YELLOW}ğŸ”¨ Building critical packages...${NC}"
if ! pnpm --filter @neonpro/types build; then
    echo -e "${RED}âŒ Types package failed to build!${NC}"
    exit 1
fi

if ! pnpm --filter @neonpro/security build; then
    echo -e "${RED}âŒ Security package failed to build!${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… Critical packages built successfully${NC}"

echo -e "${GREEN}ğŸ‰ All pre-push validations passed! Ready to push...${NC}"