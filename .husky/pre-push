#!/usr/bin/env bash
# NeonPro Enhanced Pre-push Hook
# Following Husky v9+ best practices with healthcare compliance
# Last Updated: 2025-09-29
# Documentation: .husky/README.md

set -e  # Exit on any error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}ğŸš€ Running NeonPro Pre-push Validation...${NC}"
echo -e "${BLUE}ğŸ“š See .husky/README.md for troubleshooting guidance${NC}"

# 1. Run comprehensive test suite
echo -e "${YELLOW}ğŸ§ª Running comprehensive test suite...${NC}"
if ! bun run test; then
    echo -e "${RED}âŒ Tests failed! Please fix failing tests before pushing.${NC}"
    echo -e "${BLUE}ğŸ’¡ Run 'bun run test' for detailed errors${NC}"
    exit 1
fi
echo -e "${GREEN}âœ… All tests passed${NC}"

# 2. Healthcare Compliance Tests
echo -e "${YELLOW}ğŸ¥ Running healthcare compliance tests...${NC}"
if bun run test:healthcare-compliance &> /dev/null; then
    echo -e "${GREEN}âœ… Healthcare compliance tests passed${NC}"
else
    echo -e "${YELLOW}âš ï¸ Healthcare compliance tests had issues (non-blocking)${NC}"
    echo -e "${BLUE}ğŸ’¡ Run 'bun run test:healthcare-compliance' for details${NC}"
fi

# 3. Security Compliance Tests
echo -e "${YELLOW}ğŸ›¡ï¸ Running security compliance tests...${NC}"
if bun run test:security-compliance &> /dev/null; then
    echo -e "${GREEN}âœ… Security compliance tests passed${NC}"
else
    echo -e "${YELLOW}âš ï¸ Security compliance tests had issues (non-blocking)${NC}"
    echo -e "${BLUE}ğŸ’¡ Run 'bun run test:security-compliance' for details${NC}"
fi

# 4. Build Critical Packages (to ensure they compile)
echo -e "${YELLOW}ğŸ”¨ Building critical packages...${NC}"

# Check if @neonpro/types package exists and build it
if [ -d "packages/types" ]; then
    echo -e "${BLUE}Building @neonpro/types...${NC}"
    if ! (cd packages/types && bun run build); then
        echo -e "${RED}âŒ Types package failed to build!${NC}"
        echo -e "${BLUE}ğŸ’¡ Check packages/types for build errors${NC}"
        exit 1
    fi
    echo -e "${GREEN}âœ… Types package built successfully${NC}"
else
    echo -e "${YELLOW}âš ï¸ Types package not found, skipping build${NC}"
fi

# Check if @neonpro/ui package exists and build it
if [ -d "packages/ui" ]; then
    echo -e "${BLUE}Building @neonpro/ui...${NC}"
    if ! (cd packages/ui && bun run build); then
        echo -e "${RED}âŒ UI package failed to build!${NC}"
        echo -e "${BLUE}ğŸ’¡ Check packages/ui for build errors${NC}"
        exit 1
    fi
    echo -e "${GREEN}âœ… UI package built successfully${NC}"
else
    echo -e "${YELLOW}âš ï¸ UI package not found, skipping build${NC}"
fi

echo -e "${GREEN}ğŸ‰ All pre-push validations passed! Ready to push...${NC}"
echo -e "${BLUE}ğŸ“š For troubleshooting, see: .husky/README.md${NC}"
