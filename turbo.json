{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json", "tsconfig.*.json"],
  "globalEnv": [
    "NODE_ENV",
    "VERCEL",
    "VERCEL_ENV",
    "EDGE_RUNTIME",
    "CI",
    "VERCEL_URL",
    "VERCEL_PROJECT_URL",
    "LGPD_COMPLIANCE",
    "DATA_RESIDENCY",
    "CLIENT_DATA_PROTECTION",
    "AUDIT_LOGGING"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "**/.tsbuildinfo/**"],
      "cache": true,
      "persistent": false,
      "env": ["NODE_ENV", "CI", "VERCEL_ENV"],
      "inputs": ["tsconfig*.json", "package.json", "pnpm-lock.yaml", "vercel.json"]
    },
    "build:vercel": {
      "dependsOn": ["^build", "build:core"],
      "outputs": ["dist/**"],
      "cache": true,
      "persistent": false,
      "env": ["VERCEL_ENV", "NODE_ENV", "TURBO_REMOTE_CACHE_SIGNATURE"]
    },
    "build:lgpd": {
      "dependsOn": ["build", "build:core"],
      "outputs": ["dist/**", "compliance-reports/**"],
      "cache": true,
      "persistent": false,
      "env": ["LGPD_COMPLIANCE", "DATA_RESIDENCY", "CLIENT_DATA_PROTECTION"]
    },
    "build:core": {
      "dependsOn": [
        "@neonpro/healthcare-core#build",
        "@neonpro/utils#build",
        "@neonpro/security#build",
        "@neonpro/database#build",
        "@neonpro/ai-services#build",
        "@neonpro/ui#build"
      ],
      "outputs": ["dist/**", "**/.tsbuildinfo/**"],
      "cache": true,
      "persistent": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV=development"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "persistent": false
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "persistent": false
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true,
      "persistent": false
    },
    "test:compliance": {
      "dependsOn": ["build"],
      "outputs": ["compliance-reports/**"],
      "cache": true,
      "persistent": false,
      "env": ["LGPD_COMPLIANCE", "DATA_RESIDENCY", "CLIENT_DATA_PROTECTION"]
    },
    "test:security": {
      "dependsOn": ["build"],
      "outputs": ["security-scans/**"],
      "cache": true,
      "persistent": false
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "deploy:staging": {
      "dependsOn": ["build:vercel", "test:compliance"],
      "cache": false,
      "persistent": false,
      "env": ["VERCEL_ENV", "LGPD_COMPLIANCE"]
    },
    "deploy:production": {
      "dependsOn": ["build:vercel", "test:compliance", "test:security"],
      "cache": false,
      "persistent": false,
      "env": ["VERCEL_ENV", "LGPD_COMPLIANCE", "DATA_RESIDENCY"]
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
