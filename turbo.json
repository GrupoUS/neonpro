{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "**/package.json",
    "**/tsconfig.json",
    "package-lock.json",
    ".config/dprint/dprint.json",
    "bunfig.toml",
    "bun.lock",
    "packages/database/prisma/schema.prisma",
    "packages/database/src/**/*.ts"
  ],

  "daemon": false,
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_ENV",
    "CI",
    "TURBO_TOKEN",
    "TURBO_TEAM",
    "SUPABASE_URL",
    "SUPABASE_ANON_KEY",
    "SUPABASE_SERVICE_ROLE_KEY",
    "SUPABASE_PROJECT_ID",
    "DATABASE_URL",
    "DIRECT_URL",
    "LGPD_COMPLIANCE_KEY",
    "VITE_SUPABASE_URL",
    "VITE_SUPABASE_ANON_KEY",
    "VITE_APP_ENV",
    "VITE_API_URL",
    "VITE_SITE_URL",
    "OPENAI_API_KEY",
    "ANTHROPIC_API_KEY",
    "ENCRYPTION_KEY",
    "JWT_SECRET",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "HEALTHCARE_COMPLIANCE_MODE",
    "LGPD_AUDIT_ENABLED",
    "GOOGLE_GENERATIVE_AI_API_KEY"
  ],
  "remoteCache": {
    "signature": true,
    "enabled": true,
    "timeout": 60
  },
  "globalPassThroughEnv": ["CI", "NODE_ENV", "VERCEL_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "build:check": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:e2e": {
      "dependsOn": ["build"]
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "outputs": [
        "coverage/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "lint:edge": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "validate": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "quality": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "db:migrate": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "test"],
      "cache": false
    },
    "deploy:staging": {
      "dependsOn": ["build", "test"],
      "cache": false
    }
  }
}
