    "deny": [
      "Edit",
      "Read",
      "Write",
      "NotebookRead",
      "NotebookEdit",
      "WebSearch",
      "WebFetch"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "desktop-commander",
    "sequential-thinking",
    "context7",
    "tavily",
    "exa",
    "supabase-mcp",
    "shadcn-ui",
    "serena",
    "archon",
    "vercel"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude\\hooks\\pre-tool-use.bat",
            "timeout": 45
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude\\hooks\\post-tool-use.bat",
            "timeout": 60
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude\\hooks\\subagent-stop.bat",
            "timeout": 120
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude\\hooks\\session-stop.bat",
            "timeout": 90
          }
        ]
      }
    ]
  },
  "hookConfiguration": {
    "enableProactiveCommands": true,
    "enablePlanTracking": true,
    "enableErrorRecovery": true,
    "maxRetries": 3,
    "defaultTimeout": 60,
    "logLevel": "info",
    "errorThreshold": 5,
    "planCompletionDetection": {
      "enabled": true,
      "inactivityTimeout": 300,
      "minimumCompletionIndicators": 3
    },
    "commandExecution": {
      "parallelExecution": true,
      "environmentIsolation": true,
      "timeoutGracePeriod": 10,
      "failureIsolation": true
    },
    "stateManagement": {
      "enableAdvancedTracking": true,
      "backupFrequency": "onCompletion",
      "maxStateBackups": 10,
      "cleanupInterval": 86400
    }
  },
  "memory": {
    "autoLoadClaude": true,
    "recursiveSearch": true,
    "projectContextPath": ".claude",
    "masterConfigFile": "CLAUDE.md",
    "loadOnStartup": true,
    "prioritizeProjectContext": true
  }
}