{
	"$schema": "https://json-schema.org/draft-07/schema#",
	"title": "Claude Code Simplified Hook Configuration",
	"description": "Essential hook configuration for NEONPRO",
	"version": "1.0.0",

	"taskCompletionCommands": {
		"always": [
			{
				"command": "echo",
				"args": ["âœ“ Task completed"],
				"timeout": 5,
				"continueOnFailure": true
			}
		],
		"onSuccess": [
			{
				"command": "pnpm",
				"args": ["run", "lint"],
				"timeout": 30,
				"continueOnFailure": true,
				"conditions": {
					"fileExists": "package.json"
				}
			}
		]
	},

	"settings": {
		"enableLogging": true,
		"logLevel": "info",
		"logFile": ".claude\\hooks\\claude-hooks.log",
		"defaultTimeout": 30,
		"errorHandling": {
			"stopOnFirstFailure": false
		}
	}
}