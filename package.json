{
  "name": "neonpro",
  "private": true,
  "scripts": {
    "preinstall": "echo 'Using Bun package manager for optimal performance'",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "turbo dev --filter=api",
    "dev:web": "turbo dev --filter=web",
    "dev:full": "turbo dev",
    "start": "bun run dev",
    "clean": "turbo run clean",
    "test:unit": "vitest run --coverage --pool=threads --poolOptions.threads.singleThread=true",
    "test:unit:bun": "vitest run --project unit --no-coverage --pool=threads --poolOptions.threads.singleThread=true --reporter=verbose --isolate=false",
    "test:bun:fast": "vitest run --no-coverage --pool=threads --poolOptions.threads.singleThread=true --reporter=verbose --isolate=false --css=false",
    "test:bun:integration": "vitest run --config vitest.config.integration.ts --no-coverage --pool=threads --poolOptions.threads.singleThread=true",
    "test:watch": "turbo run test:watch",
    "test:ui": "vitest --ui",
    "test:lint": "bun run lint && bun run type-check",
    "test:type": "turbo run type-check",
    "test:all": "bun run test:lint && bun run test:type && bun run test:unit:bun",
    "quality:check": "bun run test:lint && bun run test:type",
    "format": "NODE_OPTIONS=\"--max-old-space-size=4096\" turbo run format",
    "format:check": "NODE_OPTIONS=\"--max-old-space-size=4096\" turbo run format:check",
    "lint": "NODE_OPTIONS=\"--max-old-space-size=4096\" turbo run lint",
    "lint:fix": "NODE_OPTIONS=\"--max-old-space-size=4096\" turbo run lint:fix",
    "next:lint:web": "bunx next lint --dir apps/web",
    "type-check": "NODE_OPTIONS=\"--max-old-space-size=4096\" turbo run type-check",
    "trunk": "trunk check --all",
    "ci:check": "bun run quality:check && bun run test",
    "test:e2e": "echo 'E2E tests are run separately; install browsers with \"npx playwright install --with-deps\" and run from the appropriate package'",
    "ci:fix": "bun run lint:fix && bun run format",
    "test": "turbo run test",
    "test:changed": "turbo run test --filter=...[HEAD^]",
    "test:unit:watch": "vitest --reporter=verbose",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "turbo run test:coverage",
    "coverage": "turbo run coverage",
    "test:unit:coverage": "turbo run test:coverage",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:integration:watch": "vitest --config vitest.config.integration.ts",
    "test:integration:ui": "vitest --ui --config vitest.config.integration.ts",
    "test:integration:coverage": "vitest run --coverage --config vitest.config.integration.ts",
    "test:safe": "turbo run test",
    "test:unit:safe": "turbo run test:unit",
    "build:production": "NODE_ENV=production turbo run build",
    "validate:production": "turbo run lint && turbo run type-check && turbo run test:safe",
    "vercel:login": "vercel login",
    "vercel:link": "vercel link --yes",
    "env:pull": "vercel env pull .env.local",
    "env:push": "vercel env pull .env.local && bash scripts/setup-vercel.sh || true",
    "deploy:vercel": "vercel --prod",
    "deploy:web:preview": "vercel --cwd apps/web",
    "deploy:web:prod": "vercel --cwd apps/web --prod",
    "deploy:api:preview": "vercel --cwd apps/api",
    "deploy:api:prod": "vercel --cwd apps/api --prod",
    "deploy:staging": "vercel",
    "health:check": "turbo run health:check",
    "monitor:production": "turbo run monitor",
    "test:ai": "vitest run --testNamePattern=\"AI|LLM|GPT\" --reporter=verbose",
    "benchmark": "vitest bench --reporter=verbose",
    "security:audit": "bun audit",
    "security:check": "bun run security:audit && bun run ci:check",
    "deps:update": "bun update",
    "deps:check": "bun outdated",
    "oxlint:fix": "source scripts/optimize-memory.sh && run_oxlint_optimized --fix",
    "compliance:check": "node scripts/compliance-check.mjs",
    "coverage:verify": "node scripts/coverage-verify.mjs",
    "db:generate": "PRISMA_SCHEMA=${PRISMA_SCHEMA:-packages/database/prisma/schema.prisma} bunx --filter @neonpro/database prisma generate --schema \"$PRISMA_SCHEMA\"",
    "db:migrate:status": "PRISMA_SCHEMA=${PRISMA_SCHEMA:-packages/database/prisma/schema.prisma} bunx --filter @neonpro/database prisma migrate status --schema \"$PRISMA_SCHEMA\"",
    "db:migrate:dev": "PRISMA_SCHEMA=${PRISMA_SCHEMA:-packages/database/prisma/schema.prisma} bunx --filter @neonpro/database prisma migrate dev --schema \"$PRISMA_SCHEMA\"",
    "db:introspect": "PRISMA_SCHEMA=${PRISMA_SCHEMA:-packages/database/prisma/schema.prisma} bunx --filter @neonpro/database prisma db pull --schema \"$PRISMA_SCHEMA\""
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@turbo/gen": "^1.13.4",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitest/coverage-v8": "3.2.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "oxlint": "^0.15.0",
    "prettier": "^3.6.2",
    "sonner": "^2.0.7",
    "turbo": "^2.5.6",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "dependencies": {
    "@tanstack/react-query": "^5.62.2",
    "next": "^15.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vercel": "47.0.5"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.1.1",
      "react-dom": "^19.1.1",
      "@types/react": "^19.0.0",
      "@types/react-dom": "^19.0.0",
      "glob": "^10.3.10",
      "rimraf": "^5.0.5",
      "uuid": "^10.0.0",
      "jose": "^5.6.3",
      "inflight": "^1.0.6",
      "source-map": "^0.8.0-beta.0",
      "marked": ">=4.0.10",
      "hawk": ">=9.0.1",
      "undici": ">=5.29.0",
      "esbuild": ">=0.25.9"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ],
      "allowAny": [
        "*"
      ]
    }
  }
}
