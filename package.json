{
  "name": "neonpro-monorepo",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "NeonPro - Sistema de Gestão para Clínicas de Estética (Monorepo)",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "vitest --config vitest.config.ts",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:unit:watch": "vitest --config vitest.config.ts",
    "test:unit:ui": "vitest --config vitest.config.ts --ui",
    "test:unit:coverage": "vitest run --config vitest.config.ts --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:all": "pnpm run test:unit && pnpm run test:e2e",
    "clean": "turbo clean",
    "dev:web": "turbo dev --filter=@neonpro/web",
    "build:web": "turbo build --filter=@neonpro/web",
    "prepare": "husky",
    "format": "npx ultracite format",
    "format:check": "npx ultracite check",
    "format:biome": "biome format --write .",
    "lint:biome": "biome lint .",
    "lint:biome:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "ci": "biome ci .",
    "test:healthcare": "vitest run --config vitest.config.ts --testNamePattern=\"LGPD|ANVISA|CFM|healthcare|patient|medical\"",
    "test:compliance": "pnpm run test:healthcare && pnpm run test:lgpd && pnpm run test:anvisa",
    "test:lgpd": "vitest run --config vitest.config.ts --testNamePattern=\"LGPD|consent|privacy|personal.*data\"",
    "test:anvisa": "vitest run --config vitest.config.ts --testNamePattern=\"ANVISA|device|medical.*equipment|regulatory\"",
    "test:cfm": "vitest run --config vitest.config.ts --testNamePattern=\"CFM|doctor|medical.*professional|prescription\"",
    "db:start": "pnpm --filter @neonpro/db db:start",
    "db:stop": "pnpm --filter @neonpro/db db:stop",
    "db:status": "pnpm --filter @neonpro/db db:status",
    "db:reset": "pnpm --filter @neonpro/db db:reset",
    "db:push": "pnpm --filter @neonpro/db db:push",
    "db:pull": "pnpm --filter @neonpro/db db:pull",
    "db:migration:new": "pnpm --filter @neonpro/db db:migration:new",
    "db:migration:up": "pnpm --filter @neonpro/db db:migration:up",
    "db:generate-types": "pnpm --filter @neonpro/db db:generate:types",
    "db:functions:deploy": "pnpm --filter @neonpro/db db:functions:deploy",
    "db:functions:serve": "pnpm --filter @neonpro/db db:functions:serve",
    "supabase:start": "pnpm db:start",
    "supabase:stop": "pnpm db:stop",
    "supabase:status": "pnpm db:status",
    "test:security": "vitest run --config vitest.config.ts --testNamePattern=\"security|encryption|audit|rls\"",
    "test:patient": "vitest run --config vitest.config.ts --testNamePattern=\"patient\"",
    "test:critical": "vitest run --config vitest.config.ts --testNamePattern=\"critical|emergency\"",
    "validate:healthcare": "pnpm run test:compliance && pnpm run type-check && pnpm run lint",
    "build:production": "pnpm run validate:healthcare && pnpm run build",
    "audit:security": "pnpm audit --audit-level moderate",
    "audit:healthcare": "pnpm run test:compliance && pnpm run audit:security",
    "claude:healthcare-compliance": "echo 'Running /healthcare-compliance command...' && pnpm run test:compliance",
    "claude:patient-data-security": "echo 'Running /patient-data-security command...' && pnpm run test:security && pnpm run test:patient",
    "claude:biome-quality-check": "echo 'Running /biome-quality-check command...' && pnpm run check:fix",
    "claude:playwright-e2e-healthcare": "echo 'Running /playwright-e2e-healthcare command...' && pnpm run test:e2e",
    "claude:test-dashboard": "echo '🏥 NEONPRO Healthcare Test Dashboard' && echo '=================================' && echo 'Unit Tests: pnpm test:unit' && echo 'E2E Tests: pnpm test:e2e' && echo 'Compliance: pnpm claude:healthcare-compliance' && echo 'Security: pnpm claude:patient-data-security' && echo 'Quality: pnpm claude:biome-quality-check'",
    "claude:test-watch": "echo 'Starting healthcare test watch mode...' && pnpm test:unit:watch",
    "claude:test-report": "echo 'Generating healthcare test reports...' && pnpm test:unit:coverage && echo 'Reports available at: tools/testing/coverage/'",
    "build:force": "turbo build --force",
    "build:cache": "turbo build --cache-dir=.turbo",
    "quality": "turbo format lint type-check test",
    "quality:fix": "turbo format lint:fix",
    "cache:clean": "turbo clean && rm -rf .turbo",
    "cache:prune": "turbo prune",
    "workspace:graph": "turbo graph",
    "workspace:list": "pnpm list --recursive --depth=0",
    "workspace:update": "pnpm update --recursive",
    "health": "node tools/migration-validator.cjs",
    "validate": "turbo format:check lint type-check test",
    "ci:cache": "turbo format:check lint type-check test build --cache-dir=.turbo"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.10.2",
    "@vitejs/plugin-react": "^4.3.4",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.1.5",
    "msw": "^2.6.6",
    "turbo": "^2.4.4",
    "typescript": "^5.7.2",
    "ultracite": "^5.1.5",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "clinic-management",
    "healthcare",
    "monorepo",
    "nextjs",
    "supabase"
  ],
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.55.0",
    "dotenv": "^17.2.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ]
  }
}