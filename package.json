{
  "name": "neonpro-monorepo",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "NeonPro - Sistema de Gestão para Clínicas de Estética (Monorepo)",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "vitest --config vitest.config.ts",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:unit:watch": "vitest --config vitest.config.ts",
    "test:unit:ui": "vitest --config vitest.config.ts --ui",
    "test:unit:coverage": "vitest run --config vitest.config.ts --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:all": "pnpm run test:unit && pnpm run test:e2e",
    "clean": "turbo clean",
    "dev:web": "turbo dev --filter=@neonpro/web",
    "build:web": "turbo build --filter=@neonpro/web",
    "format": "biome format --write .",
    "format:check": "biome check",
    "lint:biome": "biome lint .",
    "lint:biome:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "ci": "biome ci .",
    "performance:analyze": "pnpm --filter @neonpro/performance run analyze:bundle && pnpm --filter @neonpro/performance run analyze:performance",
    "performance:optimize": "pnpm --filter @neonpro/performance run optimize:bundles && pnpm --filter @neonpro/performance run optimize:assets",
    "performance:validate": "pnpm --filter @neonpro/performance run validate:performance",
    "performance:report": "pnpm performance:analyze && pnpm performance:validate",
    "test:healthcare": "vitest run --config vitest.config.ts --testNamePattern=\"LGPD|ANVISA|CFM|healthcare|patient|medical\"",
    "docs:generate": "pnpm --filter @neonpro/docs run generate:openapi && pnpm --filter @neonpro/docs run generate:adrs",
    "docs:validate": "pnpm --filter @neonpro/docs run validate:api && pnpm --filter @neonpro/docs run validate:schemas",
    "docs:full": "pnpm docs:generate && pnpm docs:validate",
    "deploy:blue-green": "pnpm --filter @neonpro/deployment run deploy:blue-green",
    "deploy:health-check": "pnpm --filter @neonpro/deployment run health:check",
    "deploy:pre-checks": "pnpm --filter @neonpro/deployment run validate:pre-deploy",
    "deploy:post-validation": "pnpm --filter @neonpro/deployment run validate:post-deploy",
    "go-live:validate": "tsx scripts/go-live/go-live-checklist.ts",
    "go-live:security": "tsx scripts/go-live/security-audit.ts",
    "go-live:performance": "tsx scripts/go-live/performance-benchmark.ts",
    "go-live:compliance": "tsx scripts/go-live/compliance-check.ts",
    "go-live:full": "pnpm go-live:security && pnpm go-live:performance && pnpm go-live:compliance && pnpm go-live:validate",
    "test:ai-healthcare": "pnpm --filter @neonpro/ai test",
    "test:integrations": "pnpm --filter @neonpro/integrations test",
    "test:devops": "pnpm --filter @neonpro/devops test",
    "test:compliance": "pnpm run test:healthcare && pnpm run test:lgpd && pnpm run test:anvisa",
    "test:lgpd": "vitest run --config vitest.config.ts --testNamePattern=\"LGPD|consent|privacy|personal.*data\"",
    "test:anvisa": "vitest run --config vitest.config.ts --testNamePattern=\"ANVISA|device|medical.*equipment|regulatory\"",
    "test:cfm": "vitest run --config vitest.config.ts --testNamePattern=\"CFM|doctor|medical.*professional|prescription\"",
    "db:start": "pnpm --filter @neonpro/db db:start",
    "db:stop": "pnpm --filter @neonpro/db db:stop",
    "db:status": "pnpm --filter @neonpro/db db:status",
    "db:reset": "pnpm --filter @neonpro/db db:reset",
    "db:push": "pnpm --filter @neonpro/db db:push",
    "db:pull": "pnpm --filter @neonpro/db db:pull"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "turbo": "^2.5.6",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "@playwright/test": "^1.49.1",
    "tsx": "^4.19.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}