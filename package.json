{
  "name": "neonpro",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web",
    "dev:full": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "npx ultracite format",
    "format:check": "npx ultracite lint",
    "lint:biome": "npx ultracite lint",
    "check:fix": "npx ultracite format",
    "ci-check": "npx ultracite lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:integration:watch": "vitest --config vitest.config.integration.ts",
    "test:integration:ui": "vitest --ui --config vitest.config.integration.ts",
    "test:integration:coverage": "vitest run --coverage --config vitest.config.integration.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:install": "playwright install --with-deps",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:all:safe": "pnpm ci:check && pnpm test:unit:safe && echo \"âœ… Safe test suite completed successfully\"",
    "test:unit:safe": "vitest run apps/web/tests/core apps/web/tests/components/ui apps/web/tests/hooks/simple-auth.test.tsx --no-coverage",
    "test:healthcare": "pnpm test:integration -- --testNamePattern=\"(Patient|LGPD|Emergency)\"",
    "ci": "pnpm format && pnpm lint:biome && pnpm type-check",
    "ci:check": "pnpm format:check && pnpm lint:biome && pnpm type-check",
    "ci:safe": "pnpm ci:check && pnpm test:unit:safe"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@playwright/test": "^1.54.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^1.13.4",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitest/ui": "^3.2.4",
    "dotenv": "^17.2.1",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "msw": "^2.10.5",
    "node-mocks-http": "^1.17.2",
    "sonner": "^2.0.7",
    "turbo": "^1.13.4",
    "typescript": "^5.0.0",
    "ultracite": "^5.2.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.2",
    "@tanstack/react-query-devtools": "^5.62.2",
    "@vitejs/plugin-react": "^5.0.0",
    "jspdf": "^3.0.1",
    "next": "^15.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^3.4.15",
    "xlsx": "^0.18.5"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.1.1",
      "react-dom": "^19.1.1",
      "@types/react": "^19.0.0",
      "@types/react-dom": "^19.0.0"
    }
  }
}
