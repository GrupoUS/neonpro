{
  "$schema": "https://oxc.rs/schema/oxlint.json",
  "globals": {
    "React": true
  },
  "rules": {
    "eslint/no-unused-vars": [
      "warn",
      {
        "args": "after-used",
        "argsIgnorePattern": "^_",
        "caughtErrors": "all",
        "caughtErrorsIgnorePattern": "^_",
        "destructuredArrayIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "eslint/no-unused-expressions": ["warn", { "allowShortCircuit": true, "allowTernary": true }],
    "typescript-eslint/no-explicit-any": "warn",
    "typescript-eslint/no-non-null-assertion": "warn",
    "eslint-plugin-react-hooks/rules-of-hooks": "error",
    "eslint-plugin-react-hooks/exhaustive-deps": "warn",
    "eslint-plugin-react/no-unescaped-entities": "warn"
  }
}
