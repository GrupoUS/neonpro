# Exclude everything by default
*

# Only include frontend and essential files
!dist
!package.json
!tsconfig.json

# Include UI package dependencies
!packages/ui
!packages/types

# Include essential config files
!vite.config.*
!tailwind.config.*
!postcss.config.*
!.eslintrc.*
!.prettierrc.*

# Exclude development and test files
**/__tests__/**
**/*.test.*
**/*.spec.*
**/node_modules/**
!apps/web/node_modules/**

# Exclude source maps and logs
**/*.map
**/*.log
!.env.example