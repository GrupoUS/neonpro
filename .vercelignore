# Exclude everything by default
*

# Only include frontend and essential files
!dist
!package.json
!bun.lockb
!tsconfig.json
!build.sh
!vercel.json

# Include all packages
!packages/ui
!packages/types
!packages/database
!packages/core
!packages/config

# Include web app
!apps/web

# Include essential config files
!vite.config.*
!tailwind.config.*
