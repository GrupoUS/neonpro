# PNPM Local Configuration
# Força todas as dependências e cache ficarem no projeto

# Store local no projeto
store-dir=./node_modules/.pnpm-store

# Cache local no projeto  
cache-dir=./node_modules/.pnpm-cache

# Modules directory local
modules-dir=./node_modules

# Configurações de workspace
link-workspace-packages=true
prefer-workspace-packages=true

# Configurações de segurança
auto-install-peers=false
strict-peer-dependencies=false

# Registry oficial
registry=https://registry.npmjs.org/

# Configurações de performance
frozen-lockfile=false
prefer-frozen-lockfile=true