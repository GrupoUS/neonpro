{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "composite": false,
    "incremental": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "types": ["node", "vitest", "vitest/globals"],
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./packages/shared/src/*"],
      // Core 12-package architecture paths
      "@neonpro/types": ["./packages/types/src"],
      "@neonpro/types/*": ["./packages/types/src/*"],
      "@neonpro/shared": ["./packages/shared/src"],
      "@neonpro/shared/*": ["./packages/shared/src/*"],
      "@neonpro/config": ["./packages/config/src"],
      "@neonpro/config/*": ["./packages/config/src/*"],
      "@neonpro/database": ["./packages/database/src"],
      "@neonpro/database/*": ["./packages/database/src/*"],

      "@neonpro/integrations": ["./packages/integrations/src"],
      "@neonpro/integrations/*": ["./packages/integrations/src/*"],
      "@neonpro/workflows": ["./packages/workflows/src"],
      "@neonpro/workflows/*": ["./packages/workflows/src/*"],
      "@neonpro/security": ["./packages/security/src"],
      "@neonpro/security/*": ["./packages/security/src/*"],
      "@neonpro/observability": ["./packages/observability/src"],
      "@neonpro/observability/*": ["./packages/observability/src/*"],
      "@neonpro/ui": ["./packages/ui/src"],
      "@neonpro/ui/*": ["./packages/ui/src*"],
      // Legacy package paths (for backward compatibility)
      "@neonpro/*": ["./packages/*/src"],
      "@apps/*": ["./apps/*/src"],
      "@tests/*": ["./tools/tests/*"]
    }
  },
  "include": ["src/**/*", "tools/tests/**/*", "*.ts", "*.tsx", "types/**/*"],
  "exclude": ["node_modules", "dist", "**/dist/**", "**/*.js", "**/*.test.tsx", "**/__tests__/**"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
