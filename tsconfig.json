{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "vitest", "vitest/globals"],
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["packages/shared/src/*"],
      "@neonpro/*": ["packages/*/src"],
      "@apps/*": ["apps/*/src"],
      "@tests/*": ["./tools/tests/*"]
    }
  },
  "include": [
    "packages/**/*",
    "src/**/*",
    "tools/tests/**/*",
    "*.ts",
    "*.tsx",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**/*",
    "**/*.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**"
  ],

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
