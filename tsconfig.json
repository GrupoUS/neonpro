{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "composite": false,
    "incremental": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "types": ["node", "vitest", "vitest/globals"],
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*", 
    "tools/tests/**/*", 
    "*.ts", 
    "*.tsx", 
    "types/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "tests/**/*",
    "apps/*/tests/**/*",
    "packages/*/tests/**/*",
    "packages/*/__tests__/**/*",
    "**/__tests__/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/dist/**", "**/*.js"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
