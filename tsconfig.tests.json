{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist-tests",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": true,
    "types": ["vitest", "vitest/globals", "@testing-library/jest-dom", "node"],
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@neonpro/shared": ["./packages/shared/src"],
      "@neonpro/shared/*": ["./packages/shared/src/*"],
      "@neonpro/types": ["./packages/types/src"],
      "@neonpro/types/*": ["./packages/types/src/*"],
      "@neonpro/database": ["./packages/database/src"],
      "@neonpro/database/*": ["./packages/database/src/*"],
      "@neonpro/ui": ["./packages/ui/src"],
      "@neonpro/ui/*": ["./packages/ui/src/*"],
      "@neonpro/config": ["./packages/config/src"],
      "@neonpro/config/*": ["./packages/config/src/*"],
      "@neonpro/core": ["./packages/core/src"],
      "@neonpro/core/*": ["./packages/core/src/*"],
      "@neonpro/*": ["./packages/*/src"],
      "@apps/*": ["./apps/*/src"],
      "@tests/*": ["./tools/tests/*"]
    }
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "tests/**/*",
    "tools/tests/**/*",
    "apps/api/tests/**/*",
    "packages/**/__tests__/**/*",
    "packages/**/tests/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/dist/**/*", "**/*.js", "**/*.d.ts"],
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/shared" },
    { "path": "./packages/database" },
    { "path": "./packages/core" },
    { "path": "./packages/ui" },
    { "path": "./packages/config" }
  ]
}
