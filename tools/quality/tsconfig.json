{
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@neonpro/utils": ["../../packages/utils/src"],
      "@neonpro/security": ["../../packages/security/src"],
      "@neonpro/monitoring": ["../../packages/monitoring/src"],
      "@neonpro/core-services": ["../../packages/core-services/src"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
