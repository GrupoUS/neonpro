{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "lineWidth": 100,
  "indentWidth": 2,
  "useTabs": false,
  "newLineKind": "lf",
  "typescript": {
    "quoteStyle": "preferSingle",
    "semiColons": "asi",
    "trailingCommas": "onlyMultiLine",
    "nextControlFlowPosition": "sameLine",
    "arrowFunction.useParentheses": "force",
    "arrayExpression.preferSingleLine": false,
    "arrayPattern.preferSingleLine": false,
    "binaryExpression.linePerExpression": true,
    "conditionalExpression.linePerExpression": true,
    "ignoreNodeCommentText": "dprint-ignore",
    "ignoreFileCommentText": "dprint-ignore-file",

    "arguments.preferSingleLine": false
  },
  "json": {
    "array.preferSingleLine": false,
    "object.preferSingleLine": false
  },
  "markdown": {
    "lineWidth": 100
  },
  "toml": {},
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,cts,mjs,mts,json,md,toml}"],
  "excludes": [
    "./node_modules",
    "./.next",
    "./.claude",
    "./.vscode",
    "./.idea",
    "./.git",
    "./.github",
    "./.husky",
    "./.cache",
    "./.dprint",
    "./.prettier",
    "./.eslint",
    "./.stylelint",
    "./.lintstaged",
    "./.commitlint",
    "./.release-it",
    "./.versionrc",
    "./.changeset",
    "./.husky",
    "./.lintstagedrc",
    "./.release-it.json",
    "./.versionrc.json",
    "./.changeset/config.json",
    "./dist",
    "./build",
    "./coverage",
    "./public",
    "./tmp",
    "./temp",
    "./logs",
    "./log",
    "./*.min.*",
    "./LICENSE*",
    "./license*",
    "./*.txt",
    "./*.md",
    "./README*",
    "./readme*",
    "./CHANGELOG*",
    "./changelog*",
    "./.yarn",
    "lint-report.json",
    "oxlint-report.json",
    "oxlint-issues.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.88.4.wasm",
    "https://plugins.dprint.dev/json-0.19.1.wasm",
    "https://plugins.dprint.dev/markdown-0.17.2.wasm",
    "https://plugins.dprint.dev/toml-0.5.4.wasm"
  ]
}
