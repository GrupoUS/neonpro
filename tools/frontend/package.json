{
  "name": "@neonpro/tools-frontend-tests",
  "version": "1.0.0",
  "description": "Frontend testing suite for NeonPro - React, E2E, Accessibility & Healthcare UI",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:components": "vitest src/components",
    "test:routes": "vitest src/routes",
    "test:e2e": "playwright test src/e2e",
    "test:e2e:ui": "playwright test src/e2e --ui",
    "test:a11y": "vitest src/accessibility",
    "test:healthcare-ui": "vitest src/healthcare-ui",
    "lint": "oxlint --fix src",
    "type-check": "tsc --noEmit",
    "build": "tsup"
  },
  "dependencies": {
    "@neonpro/tools-shared": "workspace:*",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.0",
    "jsdom": "^23.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "oxlint": "^0.15.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.2",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "frontend",
    "testing",
    "react",
    "e2e",
    "accessibility",
    "healthcare",
    "neonpro"
  ],
  "author": "NeonPro Team",
  "license": "MIT"
}
