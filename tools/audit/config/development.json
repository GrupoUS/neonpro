{
  "name": "neonpro-audit-development",
  "version": "1.0.0",
  "environment": "development",
  "logging": {
    "level": "debug",
    "format": "human-readable",
    "outputs": ["stdout"],
    "rotation": {
      "enabled": false
    },
    "paths": {
      "audit": "./logs/audit-dev.log",
      "performance": "./logs/performance-dev.log",
      "error": "./logs/error-dev.log"
    }
  },
  "performance": {
    "maxMemoryUsage": "1GB",
    "maxProcessingTime": "3600000",
    "enableProfiling": true,
    "metricsCollection": true,
    "healthCheckInterval": 60000
  },
  "constitutional": {
    "enforceFileLimit": false,
    "minFileCount": 100,
    "maxMemoryBytes": 1073741824,
    "maxTimeMs": 3600000,
    "qualityThreshold": 8.0,
    "enableStrictMode": false
  },
  "security": {
    "auditTrail": {
      "enabled": true,
      "retention": "7d",
      "encryption": "none"
    },
    "accessControl": {
      "enabled": false,
      "allowedPaths": [],
      "deniedPaths": []
    },
    "inputValidation": {
      "maxPathLength": 2048,
      "allowedExtensions": [".ts", ".tsx", ".js", ".jsx", ".json", ".md", ".txt"],
      "sanitizeInputs": false
    }
  },
  "monitoring": {
    "enabled": true,
    "endpoints": {
      "health": "/health",
      "metrics": "/metrics",
      "status": "/status"
    },
    "alerts": {
      "memoryThreshold": 0.9,
      "errorRate": 0.1,
      "responseTime": 10000
    }
  },
  "reporting": {
    "formats": ["json", "html"],
    "compression": false,
    "retention": "7d",
    "storage": {
      "type": "filesystem",
      "path": "./reports"
    }
  },
  "cache": {
    "enabled": true,
    "type": "memory",
    "maxSize": "100MB",
    "ttl": 1800000
  }
}
