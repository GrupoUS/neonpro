{
  "dashboard": {
    "id": "healthcare-overview",
    "title": "NeonPro Healthcare Platform - Overview",
    "description": "Comprehensive healthcare platform monitoring dashboard",
    "tags": ["healthcare", "overview", "production"],
    "timezone": "America/Sao_Paulo",
    "panels": [
      {
        "id": "system-health",
        "title": "System Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"neonpro-web\"}",
            "legendFormat": "Web Server"
          },
          {
            "expr": "up{job=\"neonpro-api\"}",
            "legendFormat": "API Server"
          },
          {
            "expr": "up{job=\"neonpro-database\"}",
            "legendFormat": "Database"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN"
                  },
                  "1": {
                    "text": "UP"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": "patient-count",
        "title": "Active Patients",
        "type": "stat",
        "targets": [
          {
            "expr": "neonpro_patients_active_total",
            "legendFormat": "Active Patients"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1000
                },
                {
                  "color": "red",
                  "value": 5000
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": "appointment-today",
        "title": "Today's Appointments",
        "type": "stat",
        "targets": [
          {
            "expr": "neonpro_appointments_today_total",
            "legendFormat": "Scheduled"
          },
          {
            "expr": "neonpro_appointments_completed_today_total",
            "legendFormat": "Completed"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": "response-time",
        "title": "API Response Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, neonpro_api_request_duration_seconds_bucket)",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, neonpro_api_request_duration_seconds_bucket)",
            "legendFormat": "50th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": "error-rate",
        "title": "Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(neonpro_api_errors_total[5m])",
            "legendFormat": "Errors per second"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": "compliance-status",
        "title": "Compliance Status",
        "type": "stat",
        "targets": [
          {
            "expr": "neonpro_compliance_lgpd_status",
            "legendFormat": "LGPD"
          },
          {
            "expr": "neonpro_compliance_anvisa_status",
            "legendFormat": "ANVISA"
          },
          {
            "expr": "neonpro_compliance_cfm_status",
            "legendFormat": "CFM"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "NON-COMPLIANT"
                  },
                  "1": {
                    "text": "COMPLIANT"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": "data-breaches",
        "title": "Security Incidents",
        "type": "timeseries",
        "targets": [
          {
            "expr": "increase(neonpro_security_incidents_total[24h])",
            "legendFormat": "Last 24h"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": "audit-logs",
        "title": "Audit Events",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(neonpro_audit_events_total[5m])",
            "legendFormat": "Audit events per second"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
