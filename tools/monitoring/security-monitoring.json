{
  "security_monitoring": {
    "version": "1.0.0",
    "healthcare_compliance": "HIPAA, LGPD, ANVISA",
    "monitoring_config": {
      "event_collection": {
        "enabled": true,
        "retention_days": 365,
        "real_time_processing": true,
        "encryption_required": true
      },
      "threat_detection": {
        "enabled": true,
        "ml_detection": true,
        "behavioral_analysis": true,
        "anomaly_detection": true
      },
      "audit_trail": {
        "enabled": true,
        "immutable_logs": true,
        "blockchain_verification": false,
        "compliance_certified": true
      }
    },
    "security_events": [
      {
        "event_id": "AUTH_FAILURE",
        "name": "Authentication Failure",
        "severity": "medium",
        "description": "Failed authentication attempts",
        "detection_pattern": "event.type='auth' AND event.status='failed'",
        "response_actions": [
          "temporarily_lock_account",
          "notify_security_team",
          "log_for_audit"
        ],
        "compliance_impact": ["LGPD"],
        "healthcare_risk": "unauthorized_access"
      },
      {
        "event_id": "DATA_ACCESS_UNAUTHORIZED",
        "name": "Unauthorized Data Access",
        "severity": "critical",
        "description": "Unauthorized access to patient data",
        "detection_pattern": "event.type='data_access' AND user.permissions NOT CONTAIN required_permission",
        "response_actions": [
          "immediate_revocation",
          "emergency_alert",
          "incident_response"
        ],
        "compliance_impact": ["LGPD", "HIPAA"],
        "healthcare_risk": "data_breach"
      },
      {
        "event_id": "DATA_EXPORT_LARGE",
        "name": "Large Data Export",
        "severity": "high",
        "description": "Bulk export of patient data",
        "detection_pattern": "event.type='data_export' AND data.size > 1000",
        "response_actions": [
          "require_manager_approval",
          "enhanced_logging",
          "compliance_review"
        ],
        "compliance_impact": ["LGPD"],
        "healthcare_risk": "data_exfiltration"
      },
      {
        "event_id": "PRIVILEGE_ESCALATION",
        "name": "Privilege Escalation",
        "severity": "critical",
        "description": "Unauthorized privilege escalation",
        "detection_pattern": "event.type='privilege_change' AND new_privilege_level > old_privilege_level",
        "response_actions": [
          "immediate_revocation",
          "account_suspension",
          "forensic_investigation"
        ],
        "compliance_impact": ["LGPD", "ANVISA"],
        "healthcare_risk": "system_compromise"
      },
      {
        "event_id": "MALWARE_DETECTED",
        "name": "Malware Detection",
        "severity": "critical",
        "description": "Malware detected on healthcare systems",
        "detection_pattern": "event.type='malware' OR event.type='virus'",
        "response_actions": [
          "immediate_isolation",
          "incident_response",
          "system_restoration"
        ],
        "compliance_impact": ["ANVISA", "HIPAA"],
        "healthcare_risk": "system_contamination"
      },
      {
        "event_id": "BRUTE_FORCE_ATTACK",
        "name": "Brute Force Attack",
        "severity": "high",
        "description": "Multiple failed login attempts from same source",
        "detection_pattern": "COUNT(event.type='auth' AND event.status='failed') > 10 WITHIN 5m GROUP BY source_ip",
        "response_actions": ["ip_blocking", "rate_limiting", "security_alert"],
        "compliance_impact": ["LGPD"],
        "healthcare_risk": "credential_theft"
      },
      {
        "event_id": "DATA_TAMPERING",
        "name": "Data Tampering",
        "severity": "critical",
        "description": "Unauthorized modification of medical records",
        "detection_pattern": "event.type='data_modification' AND user.role NOT CONTAIN 'medical_staff'",
        "response_actions": [
          "data_rollback",
          "account_suspension",
          "legal_notification"
        ],
        "compliance_impact": ["LGPD", "ANVISA", "CFM"],
        "healthcare_risk": "data_integrity"
      },
      {
        "event_id": "COMPLIANCE_VIOLATION",
        "name": "Compliance Violation",
        "severity": "high",
        "description": "Violation of healthcare compliance requirements",
        "detection_pattern": "event.type='compliance_check' AND result='failed'",
        "response_actions": [
          "immediate_reporting",
          "corrective_action",
          "compliance_officer_notification"
        ],
        "compliance_impact": ["LGPD", "ANVISA", "CFM"],
        "healthcare_risk": "regulatory_fines"
      },
      {
        "event_id": "INSIDER_THREAT",
        "name": "Insider Threat",
        "severity": "critical",
        "description": "Suspicious activity by privileged users",
        "detection_pattern": "event.type='data_access' AND user.privilege_level='admin' AND time_of_day NOT IN 'business_hours'",
        "response_actions": [
          "immediate_revocation",
          "investigation",
          "legal_action"
        ],
        "compliance_impact": ["LGPD", "HIPAA"],
        "healthcare_risk": "internal_breach"
      },
      {
        "event_id": "BACKUP_FAILURE",
        "name": "Backup Failure",
        "severity": "high",
        "description": "Failure of critical backup systems",
        "detection_pattern": "event.type='backup' AND status='failed'",
        "response_actions": [
          "immediate_remediation",
          "alternative_backup",
          "compliance_notification"
        ],
        "compliance_impact": ["ANVISA"],
        "healthcare_risk": "data_loss"
      }
    ],
    "incident_response": {
      "levels": {
        "low": {
          "response_time": "4h",
          "team": "security_team",
          "escalation": false
        },
        "medium": {
          "response_time": "1h",
          "team": "security_team",
          "escalation": "security_lead"
        },
        "high": {
          "response_time": "30m",
          "team": "incident_response",
          "escalation": "cio"
        },
        "critical": {
          "response_time": "15m",
          "team": "incident_response",
          "escalation": "ceo"
        }
      },
      "notification_channels": [
        {
          "type": "email",
          "recipients": [
            "security@neonpro.healthcare",
            "dpo@neonpro.healthcare"
          ],
          "severity_levels": ["medium", "high", "critical"]
        },
        {
          "type": "sms",
          "recipients": ["+5511999999999"],
          "severity_levels": ["high", "critical"]
        },
        {
          "type": "slack",
          "channel": "#security-incidents",
          "severity_levels": ["medium", "high", "critical"]
        },
        {
          "type": "pagerduty",
          "service_id": "healthcare-security",
          "severity_levels": ["critical"]
        }
      ]
    },
    "compliance_reporting": {
      "automated_reports": {
        "daily_security_summary": {
          "enabled": true,
          "recipients": ["security@neonpro.healthcare"],
          "format": "pdf"
        },
        "weekly_compliance_report": {
          "enabled": true,
          "recipients": [
            "compliance@neonpro.healthcare",
            "dpo@neonpro.healthcare"
          ],
          "format": "pdf"
        },
        "monthly_audit_trail": {
          "enabled": true,
          "recipients": [
            "audit@neonpro.healthcare",
            "legal@neonpro.healthcare"
          ],
          "format": "csv"
        }
      },
      "regulatory_submissions": {
        "lgpd_annual_report": {
          "enabled": true,
          "deadline": "annual",
          "auto_generate": true
        },
        "anvisa_vigilance": {
          "enabled": true,
          "frequency": "quarterly",
          "auto_submit": true
        },
        "cfm_compliance": {
          "enabled": true,
          "frequency": "semi_annual",
          "auto_submit": true
        }
      }
    },
    "data_protection": {
      "encryption": {
        "at_rest": "AES-256",
        "in_transit": "TLS 1.3",
        "key_rotation": "90_days",
        "hsm_backed": true
      },
      "access_controls": {
        "mfa_required": true,
        "rbac_enabled": true,
        "session_timeout": "15m",
        "ip_whitelisting": true
      },
      "data_retention": {
        "medical_records": "25_years",
        "audit_logs": "10_years",
        "access_logs": "7_years",
        "backup_retention": "90_days"
      }
    },
    "integration_endpoints": {
      "sentry": {
        "enabled": true,
        "dsn": "your_sentry_dsn",
        "environment": "production",
        "sample_rate": 1.0
      },
      "siem": {
        "enabled": true,
        "endpoint": "your_siem_endpoint",
        "api_key": "your_siem_key",
        "log_format": "CEF"
      },
      "edr": {
        "enabled": true,
        "endpoint": "your_edr_endpoint",
        "monitoring_level": "real_time"
      }
    }
  }
}
