{
  "errorTracking": {
    "sentry": {
      "enabled": true,
      "dsn": "${SENTRY_DSN}",
      "environment": "production",
      "release": "${VERCEL_GIT_COMMIT_SHA}",
      "sampleRate": 0.1,
      "performanceMonitoring": true
    },
    "customTracking": {
      "enabled": true,
      "logLevel": "error",
      "includeStack": true,
      "includeContext": true
    }
  },
  "alerts": {
    "criticalErrors": {
      "threshold": 1,
      "timeWindow": "5m",
      "alert": true
    },
    "errorRate": {
      "threshold": 5,
      "timeWindow": "15m",
      "alert": true
    },
    "newErrors": {
      "enabled": true,
      "alert": true
    }
  }
}
