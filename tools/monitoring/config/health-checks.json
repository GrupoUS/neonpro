{
  "healthChecks": {
    "api": {
      "endpoint": "/api/health",
      "interval": 60,
      "timeout": 10,
      "retries": 3,
      "expectedStatus": 200,
      "alertOnFailure": true
    },
    "database": {
      "endpoint": "/api/v1/health",
      "interval": 300,
      "timeout": 15,
      "retries": 2,
      "expectedStatus": 200,
      "alertOnFailure": true
    },
    "authentication": {
      "endpoint": "/api/auth/health",
      "interval": 180,
      "timeout": 10,
      "retries": 3,
      "expectedStatus": 200,
      "alertOnFailure": true
    }
  },
  "alerting": {
    "email": {
      "enabled": true,
      "recipients": ["admin@neonpro.com"],
      "cooldown": 300
    },
    "slack": {
      "enabled": false,
      "webhook": "",
      "channel": "#alerts"
    },
    "discord": {
      "enabled": false,
      "webhook": ""
    }
  }
}
