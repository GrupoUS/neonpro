{
  "name": "@neonpro/tools-orchestration",
  "version": "1.0.0",
  "description": "TDD Orchestration Framework for NeonPro development tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./orchestrator": {
      "types": "./dist/tdd-orchestrator.d.ts",
      "import": "./dist/tdd-orchestrator.js",
      "require": "./dist/tdd-orchestrator.cjs"
    },
    "./quality-control": {
      "types": "./dist/quality-control-bridge.d.ts",
      "import": "./dist/quality-control-bridge.js",
      "require": "./dist/quality-control-bridge.cjs"
    },
    "./test-coordinator": {
      "types": "./dist/src/test-coordinator.d.ts",
      "import": "./dist/src/test-coordinator.js",
      "require": "./dist/src/test-coordinator.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "oxlint --fix src",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:parallel": "bun run src/test-parallel.ts",
    "orchestrate": "bun run src/test-coordinator.ts"
  },
  "dependencies": {
    "@neonpro/tools-shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.2",
    "oxlint": "^1.15.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neonpro/neonpro.git",
    "directory": "tools/orchestration"
  },
  "keywords": [
    "neonpro",
    "tdd",
    "orchestration",
    "agents",
    "quality-control",
    "healthcare",
    "compliance",
    "testing",
    "parallel"
  ],
  "author": "NeonPro Team",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/neonpro/neonpro/issues"
  },
  "homepage": "https://github.com/neonpro/neonpro#readme"
}