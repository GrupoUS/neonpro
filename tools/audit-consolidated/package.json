{
  "name": "@neonpro/audit-tool",
  "version": "2.0.0",
  "description": "Lightweight NeonPro audit utility for scanning files and summarising dependencies.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "neonpro-audit": "./dist/cli/index.js",
    "audit-tool": "./dist/cli/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist/",
    "dev": "tsup --watch",
    "test": "echo \"No tests defined\"",
    "lint": "oxlint --fix src",
    "type-check": "tsc --noEmit",
    "format": "dprint fmt",
    "format:check": "dprint check",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "prepublishOnly": "npm run quality && npm run build",
    "prepack": "npm run build",
    "cli": "node dist/cli/index.js",
    "audit": "node dist/cli/index.js audit"
  },
  "dependencies": {
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "dprint": "^0.50.0",
    "oxlint": "^0.15.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GrupoUS/neonpro",
    "directory": "tools/audit-consolidated"
  },
  "author": "NeonPro Team",
  "license": "MIT"
}
