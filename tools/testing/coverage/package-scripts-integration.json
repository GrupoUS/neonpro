{
	"scripts": {
		"test:coverage": "vitest run --config ./tools/testing/coverage/vitest.coverage.config.ts",
		"test:coverage:watch": "vitest --config ./tools/testing/coverage/vitest.coverage.config.ts",
		"test:coverage:ui": "vitest --config ./tools/testing/coverage/vitest.coverage.config.ts --ui",
		"test:performance": "playwright test --config ./tools/testing/performance/playwright.config.ts",
		"test:security": "playwright test --config ./tools/testing/e2e/tests/security/playwright.config.ts",
		"test:compliance": "playwright test --config ./tools/testing/compliance/playwright.config.ts",

		"quality:report": "tsx ./tools/testing/coverage/quality-report-generator.ts",
		"quality:dashboard": "serve ./tools/testing/quality-dashboard -p 3001",
		"quality:full": "pnpm run test:coverage && pnpm run test:performance && pnpm run test:security && pnpm run test:compliance && pnpm run quality:report",

		"coverage:open": "open ./coverage/index.html",
		"coverage:serve": "serve ./coverage -p 3002",
		"coverage:threshold": "vitest run --config ./tools/testing/coverage/vitest.coverage.config.ts --coverage.thresholds.autoUpdate",

		"reports:clean": "rimraf ./reports && rimraf ./coverage",
		"reports:archive": "tar -czf reports-$(date +%Y%m%d).tar.gz ./reports ./coverage",

		"monitor:start": "pm2 start ./tools/testing/monitoring/production-monitor.js --name neonpro-monitor",
		"monitor:stop": "pm2 stop neonpro-monitor",
		"monitor:logs": "pm2 logs neonpro-monitor",

		"ci:quality-gate": "pnpm run quality:full && node -e 'process.exit(JSON.parse(require(\"fs\").readFileSync(\"./reports/quality/json/quality-report-$(date +%Y-%m-%d).json\")).overall.qualityGate === \"PASS\" ? 0 : 1)'",
		"ci:coverage-check": "pnpm run test:coverage && node -e 'const c = JSON.parse(require(\"fs\").readFileSync(\"./coverage/coverage-summary.json\")); process.exit(c.total.lines.pct >= 90 ? 0 : 1)'",
		"ci:security-check": "pnpm run test:security && echo 'Security tests passed'",
		"ci:compliance-check": "pnpm run test:compliance && echo 'Compliance tests passed'",

		"qa:validate": "pnpm run ci:quality-gate",
		"qa:dashboard": "concurrently \"pnpm run quality:dashboard\" \"pnpm run coverage:serve\"",
		"qa:full-suite": "pnpm run quality:full && pnpm run qa:dashboard"
	},

	"devDependencies": {
		"serve": "^14.2.1",
		"rimraf": "^5.0.5",
		"concurrently": "^8.2.2",
		"pm2": "^5.3.0",
		"tsx": "^4.7.0"
	}
}
