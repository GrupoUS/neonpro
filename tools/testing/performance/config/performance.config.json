  "monitoring": {
    "alerting": {
      "criticalThreshold": 80,
      "warningThreshold": 90,
      "recipients": ["devops@neonpro.health", "performance-team@neonpro.health"]
    },
    "retention": {
      "dailyReports": 30,
      "weeklyReports": 12,
      "monthlyReports": 6
    }
  },
  "ci": {
    "triggerOnPR": true,
    "failOnCritical": true,
    "generateArtifacts": true,
    "publishResults": true
