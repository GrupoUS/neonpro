{
  "name": "@neonpro/visual-tests",
  "version": "1.0.0",
  "private": true,
  "description": "Visual regression tests for NeonPro Healthcare Platform",
  "scripts": {
    "test": "playwright test",
    "test:update": "playwright test --update-snapshots",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "baseline:create": "playwright test --update-snapshots",
    "baseline:update": "playwright test --update-snapshots",
    "screenshots:clean": "rimraf test-results-*/ && rimraf playwright-report/",
    "install:browsers": "playwright install"
  },
  "dependencies": {
    "@playwright/test": "^1.44.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0"
  }
}
