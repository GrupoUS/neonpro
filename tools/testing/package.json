{
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.3.0",
    "jsdom": "^26.1.0",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "test": "node run-tests.js all simple",
    "test:vitest": "node run-tests.js vitest simple",
    "test:playwright": "node run-tests.js playwright simple",
    "test:playwright:full": "node run-tests.js playwright full",
    "test:vitest:full": "node run-tests.js vitest full",
    "test:ui": "playwright test --config playwright.simple.config.ts --ui",
    "test:headed": "playwright test --config playwright.simple.config.ts --headed",
    "test:debug": "playwright test --config playwright.simple.config.ts --debug",
    "report": "playwright show-report reports/playwright-html",
    "codegen": "playwright codegen localhost:3000",
    "vitest": "vitest run --config vitest.simple.config.ts --reporter=verbose",
    "vitest:watch": "vitest --config vitest.simple.config.ts",
    "coverage": "vitest run --config vitest.simple.config.ts --coverage"
  }
}
