{
  "name": "@neonpro/tests",
  "version": "1.0.0",
  "description": "NeonPro comprehensive test suite following KISS and YAGNI principles",
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "test": "bun run vitest --config ./configs/vitest.config.ts",
    "test:unit": "bun run vitest --config ./configs/vitest.config.ts categories/backend/unit/",
    "test:integration": "bun run vitest --config ./configs/vitest.config.ts categories/backend/integration/",
    "test:frontend": "bun run vitest --config ./configs/vitest.config.ts categories/frontend/",
    "test:backend": "bun run vitest --config ./configs/vitest.config.ts categories/backend/",
    "test:database": "bun run vitest --config ./configs/vitest.config.ts categories/database/",
    "test:quality": "bun run vitest --config ./configs/vitest.config.ts categories/quality/",
    "test:react": "bun run vitest --config ./configs/vitest.config.ts categories/frontend/react/",
    "test:e2e": "bun run playwright test --config ./configs/playwright.config.ts",
    "test:accessibility": "bun run vitest --config ./configs/vitest.config.ts categories/frontend/accessibility/",
    "test:api": "bun run vitest --config ./configs/vitest.config.ts categories/backend/api/",
    "test:middleware": "bun run vitest --config ./configs/vitest.config.ts categories/backend/middleware/",
    "test:rls": "bun run vitest --config ./configs/vitest.config.ts categories/database/rls/",
    "test:security": "bun run vitest --config ./configs/vitest.config.ts categories/database/security/",
    "test:compliance": "bun run vitest --config ./configs/vitest.config.ts categories/database/compliance/",
    "test:coverage": "bun run vitest --config ./configs/vitest.config.ts categories/quality/coverage/",
    "test:performance": "bun run vitest --config ./configs/vitest.config.ts categories/quality/performance/",
    "test:audit": "bun run vitest --config ./configs/vitest.config.ts categories/quality/audit/",
    "test:watch": "bun run vitest --config ./configs/vitest.config.ts --watch",
    "test:coverage:all": "bun run vitest --config ./configs/vitest.config.ts --coverage",
    "test:e2e:ui": "bun run playwright test --config ./configs/playwright.config.ts --ui",
    "lint": "bun run oxlint --config ./configs/.oxlintrc.json",
    "format": "bun run dprint fmt",
    "format:check": "bun run dprint check",
    "clean": "rm -rf coverage reports node_modules/.cache",
    "clean:reports": "rm -rf ../../coverage ../../reports",
    "validate": "bun run format:check && bun run lint && bun run test:unit --run",
    "ci": "bun run validate && bun run test:coverage:all && bun run test:e2e"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "dprint": "^0.45.0",
    "oxlint": "^0.2.0"
  },
  "private": true
}
