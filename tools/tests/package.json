{
  "name": "@neonpro/tests",
  "version": "1.0.0",
  "description": "NeonPro comprehensive test suite following KISS and YAGNI principles",
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "test": "pnpm exec vitest --config ./configs/vitest.config.ts",
    "test:unit": "pnpm exec vitest --config ./configs/vitest.config.ts categories/backend/unit/",
    "test:integration": "pnpm exec vitest --config ./configs/vitest.config.ts categories/backend/integration/",
    "test:frontend": "pnpm exec vitest --config ./configs/vitest.config.ts categories/frontend/",
    "test:backend": "pnpm exec vitest --config ./configs/vitest.config.ts categories/backend/",
    "test:database": "pnpm exec vitest --config ./configs/vitest.config.ts categories/database/",
    "test:quality": "pnpm exec vitest --config ./configs/vitest.config.ts categories/quality/",
    "test:react": "pnpm exec vitest --config ./configs/vitest.config.ts categories/frontend/react/",
    "test:e2e": "pnpm exec playwright test --config ./configs/playwright.config.ts",
    "test:accessibility": "pnpm exec vitest --config ./configs/vitest.config.ts categories/frontend/accessibility/",
    "test:api": "pnpm exec vitest --config ./configs/vitest.config.ts categories/backend/api/",
    "test:middleware": "pnpm exec vitest --config ./configs/vitest.config.ts categories/backend/middleware/",
    "test:rls": "pnpm exec vitest --config ./configs/vitest.config.ts categories/database/rls/",
    "test:security": "pnpm exec vitest --config ./configs/vitest.config.ts categories/database/security/",
    "test:compliance": "pnpm exec vitest --config ./configs/vitest.config.ts categories/database/compliance/",
    "test:coverage": "pnpm exec vitest --config ./configs/vitest.config.ts categories/quality/coverage/",
    "test:performance": "pnpm exec vitest --config ./configs/vitest.config.ts categories/quality/performance/",
    "test:audit": "pnpm exec vitest --config ./configs/vitest.config.ts categories/quality/audit/",
    "test:watch": "pnpm exec vitest --config ./configs/vitest.config.ts --watch",
    "test:coverage:all": "pnpm exec vitest --config ./configs/vitest.config.ts --coverage",
    "test:e2e:ui": "pnpm exec playwright test --config ./configs/playwright.config.ts --ui",
    "lint": "pnpm exec oxlint --config ./configs/.oxlintrc.json",
    "format": "pnpm exec dprint fmt",
    "format:check": "pnpm exec dprint check",
    "clean": "rm -rf coverage reports node_modules/.cache",
    "clean:reports": "rm -rf ../../coverage ../../reports",
    "validate": "pnpm run format:check && pnpm run lint && pnpm run test:unit --run",
    "ci": "pnpm run validate && pnpm run test:coverage:all && pnpm run test:e2e"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "dprint": "^0.45.0",
    "oxlint": "^0.2.0"
  },
  "private": true
}
