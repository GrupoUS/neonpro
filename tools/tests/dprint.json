{
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/coverage/**",
    "**/test-results/**",
    "**/performance-results/**",
    "**/logs/**"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.88.7.wasm",
    "https://plugins.dprint.dev/json-0.19.2.wasm",
    "https://plugins.dprint.dev/markdown-0.16.4.wasm"
  ],
  "typescript": {
    "lineWidth": 100,
    "indentWidth": 2,
    "useTabs": false,
    "semiColons": "asi",
    "quoteStyle": "preferDouble"
  },
  "json": {
    "indentWidth": 2
  },
  "markdown": {
    "lineWidth": 100
  },

  "incremental": true
}
