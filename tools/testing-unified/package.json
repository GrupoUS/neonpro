{
  "name": "@neonpro/tools-testing",
  "version": "1.0.0",
  "description": "Unified testing infrastructure for NeonPro development tools",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./setup": {
      "types": "./dist/setup/index.d.ts",
      "import": "./dist/setup/index.js",
      "require": "./dist/setup/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./fixtures": {
      "types": "./dist/fixtures/index.d.ts",
      "import": "./dist/fixtures/index.js",
      "require": "./dist/fixtures/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:integration": "vitest run src/integration/**/*.test.ts",
    "test:e2e": "vitest run src/e2e/**/*.test.ts",
    "test:performance": "vitest run src/performance/**/*.test.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint --fix src",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@neonpro/tools-shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.2",
    "vitest": "^2.0.0",
    "oxlint": "^0.15.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neonpro/neonpro.git",
    "directory": "tools/testing-unified"
  },
  "keywords": [
    "neonpro",
    "tools",
    "testing",
    "vitest",
    "utilities",
    "healthcare",
    "compliance"
  ],
  "author": "NeonPro Team",
  "license": "MIT"
}