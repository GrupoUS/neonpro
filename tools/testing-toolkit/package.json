{
  "name": "@neonpro/testing-toolkit",
  "version": "1.0.0",
  "description": "Unified testing toolkit for NeonPro - Simple, focused, and comprehensive",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./agents": {
      "types": "./dist/agents/index.d.ts",
      "import": "./dist/agents/index.js"
    },
    "./compliance": {
      "types": "./dist/compliance/index.d.ts",
      "import": "./dist/compliance/index.js"
    },
    "./fixtures": {
      "types": "./dist/fixtures/index.d.ts",
      "import": "./dist/fixtures/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "oxlint --fix src",
    "format": "dprint fmt",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:compliance": "vitest run --config vitest.compliance.config.ts",
    "test:agents": "vitest run --config vitest.agents.config.ts",
    "test:all": "pnpm test && pnpm test:e2e && pnpm test:compliance",
    "benchmark": "vitest bench",
    "validate": "pnpm type-check && pnpm lint && pnpm test:all"
  },
  "dependencies": {
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.0",
    "hono": "^4.0.0",
    "@hono/zod-validator": "^0.2.0",
    "zod": "^3.22.0",
    "supertest": "^6.3.0",
    "msw": "^2.0.0",
    "jsdom": "^23.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/supertest": "^6.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "vitest": "^2.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.2",
    "oxlint": "^0.15.0",
    "dprint": "^0.45.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "testing",
    "toolkit",
    "neonpro",
    "healthcare",
    "compliance",
    "tdd",
    "agents",
    "vitest",
    "playwright"
  ],
  "author": "NeonPro Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neonpro/neonpro.git",
    "directory": "tools/testing-toolkit"
  },
  "bugs": {
    "url": "https://github.com/neonpro/neonpro/issues"
  },
  "homepage": "https://github.com/neonpro/neonpro#readme"
}
