# Package.json Scripts for Testing Pipeline
# These scripts should be added to the main package.json file

{
  "scripts": {
    "test:unit": "vitest run --config vitest.config.ts --coverage",
    "test:integration": "vitest run tools/testing/integration/ --config vitest.config.ts --coverage",
    "test:e2e": "playwright test tools/testing/e2e/",
    "test:performance": "playwright test tools/testing/performance/",
    "test:stress": "playwright test tools/testing/performance/stress-testing.spec.ts",
    "test:compliance": "playwright test tools/testing/compliance/",
    "test:compliance:lgpd": "playwright test tools/testing/compliance/lgpd-anvisa-cfm.spec.ts --grep 'LGPD'",
    "test:compliance:anvisa": "playwright test tools/testing/compliance/lgpd-anvisa-cfm.spec.ts --grep 'ANVISA'",
    "test:compliance:cfm": "playwright test tools/testing/compliance/lgpd-anvisa-cfm.spec.ts --grep 'CFM'",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e && pnpm test:performance && pnpm test:compliance",
    "test:ci": "pnpm test:all",
    "db:migrate:test": "supabase db reset --db-url $DATABASE_URL",
    "ci": "pnpm format --check && pnpm lint:biome && pnpm test:ci"
  }
}