{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "plugins": [
    "unicorn",
    "typescript",
    "react",
    "jsx-a11y",
    "import",
    "promise",
    "jsdoc",
    "oxc",
    "node"
  ],
  "rules": {
    "no-unused-vars": "error",
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "no-dupe-keys": "error",
    "prefer-tag-template": "error",
    "prefer-template": "error",
    "unicorn/no-empty-file": "error",
    "unicorn/no-array-for-each": "error",
    "unicorn/no-hexadecimal-number": "error",
    "unicorn/no-unsafe-regexp": "error",
    "unicorn/no-useless-filename": "error",
    "typescript/prefer-optional-chain": "error",
    "typescript/prefer-nullish-coalescing": "error",
    "typescript/no-unsafe-assignment": "error",
    "typescript/no-unsafe-member-access": "error",
    "typescript/no-unsafe-call": "error",
    "typescript/no-unsafe-return": "error",
    "typescript/no-explicit-any": "error",
    "react/jsx-no-target-blank": "error",
    "react/jsx-curly-brace-presence": ["error", { "props": "never", "children": "never" }],
    "react/no-unescaped-entities": "error",
    "react/no-array-index-key": "error",
    "react/no-children-prop": "error",
    "react/prop-types": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "jsx-a11y/alt-text": "error",
    "jsx-a11y/anchor-is-valid": "error",
    "jsx-a11y/aria-props": "error",
    "jsx-a11y/aria-proptypes": "error",
    "jsx-a11y/aria-unsupported-elements": "error",
    "jsx-a11y/role-has-required-aria-props": "error",
    "jsx-a11y/role-supports-aria-props": "error",
    "jsx-a11y/label-has-associated-control": "error",
    "jsx-a11y/click-events-have-key-events": "error",
    "jsx-a11y/no-access-key": "error",
    "jsx-a11y/no-autofocus": "error",
    "jsx-a11y/no-distracting-elements": "error",
    "jsx-a11y/heading-has-content": "error",
    "jsx-a11y/html-has-lang": "error",
    "jsx-a11y/iframe-has-title": "error",
    "jsx-a11y/img-redundant-alt": "error",
    "jsx-a11y/lang": "error",
    "jsx-a11y/no-redundant-roles": "error",
    "jsx-a11y/scope": "error",
    "jsx-a11y/tabindex-no-positive": "error",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "import/namespace": "warn",
    "promise/prefer-await-to-then": "error",
    "promise/no-return-wrap": "error",
    "promise/param-names": "error",
    "promise/catch-or-return": "error",
    "jsdoc/require-jsdoc": ["warn", {
      "contexts": [
        "FunctionExpression",
        "ClassDeclaration",
        "FunctionDeclaration",
        "MethodDefinition"
      ]
    }],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-restricted-imports": ["error", {
      "paths": [
        {
          "name": "crypto",
          "message": "Use secure crypto utilities from healthcare security package"
        },
        {
          "name": "child_process",
          "message": "Use healthcare-approved process utilities"
        }
      ]
    }],
    "no-warning-comments": ["warn", {
      "terms": ["todo", "fixme", "hack", "temporary", "temp"],
      "location": "start"
    }]
  },
  "overrides": [
    {
      "files": ["**/*.test.{ts,tsx,js,jsx}", "**/*.spec.{ts,tsx,js,jsx}"],
      "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "jsdoc/require-jsdoc": "off",
        "no-warning-comments": "off",
        "jsx-a11y/alt-text": "off",
        "jsx-a11y/anchor-is-valid": "off",
        "jsx-a11y/click-events-have-key-events": "off"
      }
    },
    {
      "files": [
        "**/*.config.{js,ts}",
        "vitest.config.*",
        "playwright.config.*",
        "vite.config.*",
        "tailwind.config.*"
      ],
      "rules": {
        "no-console": "warn",
        "import/no-extraneous-dependencies": "off",
        "jsdoc/require-jsdoc": "off"
      }
    },
    {
      "files": [
        "**/compliance/**/*.{ts,tsx}",
        "**/patient-data/**/*.{ts,tsx}",
        "**/medical-records/**/*.{ts,tsx}",
        "**/appointments/**/*.{ts,tsx}",
        "**/security/**/*.{ts,tsx}"
      ],
      "rules": {
        "no-console": "error",
        "typescript/no-unsafe-assignment": "error",
        "typescript/no-unsafe-member-access": "error",
        "typescript/no-unsafe-call": "error",
        "typescript/no-unsafe-return": "error",
        "typescript/no-explicit-any": "error",
        "typescript/prefer-optional-chain": "error",
        "typescript/prefer-nullish-coalescing": "error",
        "jsdoc/require-jsdoc": "error",
        "no-warning-comments": "error"
      }
    },
    {
      "files": [
        "**/components/**/*.{tsx,ts}",
        "**/ui/**/*.{tsx,ts}"
      ],
      "rules": {
        "jsx-a11y/alt-text": "error",
        "jsx-a11y/anchor-is-valid": "error",
        "jsx-a11y/aria-props": "error",
        "jsx-a11y/aria-proptypes": "error",
        "jsx-a11y/aria-unsupported-elements": "error",
        "jsx-a11y/role-has-required-aria-props": "error",
        "jsx-a11y/role-supports-aria-props": "error",
        "jsx-a11y/label-has-associated-control": "error",
        "react/jsx-no-target-blank": "error",
        "react/no-unescaped-entities": "error"
      }
    },
    {
      "files": [
        "**/logger/**/*.{ts,js}",
        "**/console-manager.ts",
        "**/logging/**/*.{ts,js}",
        "**/healthcare-logger.ts"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    
    {
      "files": [
        "**/services/**/*.{ts,js}",
        "**/trpc/**/*.{ts,js}",
        "**/middleware/**/*.{ts,js}"
      ],
      "rules": {
        "typescript/no-explicit-any": "error",
        "typescript/no-unsafe-assignment": "error",
        "typescript/no-unsafe-member-access": "error",
        "typescript/no-unsafe-call": "error",
        "typescript/no-unsafe-return": "error",
        "promise/prefer-await-to-then": "error",
        "jsdoc/require-jsdoc": "error",
        "no-console": "error"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/**",
    "**/node_modules/**",
    "dist/**",
    "build/**",
    "coverage/**",
    "test-results/**",
    "*.min.js",
    "playwright-report/**",
    ".next/**",
    ".turbo/**",
    "**/node_modules/**",
    "tools/tests/**",
    ".serena/**",
    ".specify/**",
    ".oxlint_cache/**",
    "bun.lock",
    "pnpm-lock.yaml",
    "*.log",
    "*.tmp",
    "*.cache",
    "vitest.config.*",
    "playwright.config.*",
    "vite.config.*",
    "tailwind.config.*",
    "dprint.json",
    "routeTree.gen.ts"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "fixable": {
    "enable": true,
    "dangerouslyAllowDangerousFixes": false,
    "suggestions": true
  },
  "settings": {
    "healthcare": {
      "lgpdCompliance": true,
      "anvisaValidation": true,
      "cfmStandards": true,
      "patientDataValidation": true,
      "auditRequirements": true,
      "brazilianDataResidency": true
    },
    "performance": {
      "maxFileSize": "500kb",
      "maxLines": 2000,
      "complexityThreshold": 10
    }
  }
}