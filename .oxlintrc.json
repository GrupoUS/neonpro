{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "plugins": [
    "unicorn",
    "typescript",
    "react",
    "jsx-a11y",
    "import",
    "promise",
    "jsdoc",
    "oxc"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error",
          "log",
          "info",
          "debug"
        ]
      }
    ],
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "no-dupe-keys": "warn",
    "typescript/prefer-optional-chain": "error",
    "typescript/prefer-nullish-coalescing": "error",
    "typescript/no-unsafe-assignment": "warn",
    "typescript/no-unsafe-member-access": "warn",
    "typescript/no-unsafe-call": "warn",
    "typescript/no-unsafe-return": "warn",
    "react/jsx-no-target-blank": "error",
    "react/jsx-curly-brace-presence": [
      "error",
      {
        "props": "never",
        "children": "never"
      }
    ],
    "react/no-unescaped-entities": "error",
    "react/no-array-index-key": "error",
    "react/no-children-prop": "error",
    "react/prop-types": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "jsx-a11y/alt-text": "error",
    "jsx-a11y/anchor-is-valid": "error",
    "jsx-a11y/aria-props": "error",
    "jsx-a11y/aria-proptypes": "error",
    "jsx-a11y/aria-unsupported-elements": "error",
    "jsx-a11y/role-has-required-aria-props": "error",
    "jsx-a11y/role-supports-aria-props": "error",
    "jsx-a11y/anchor-has-content": "warn",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "import/namespace": "warn",
    "import/no-unresolved": "off",
    "import/no-extraneous-dependencies": "off",
    "promise/prefer-await-to-then": "warn",
    "promise/no-return-wrap": "warn",
    "promise/param-names": "warn",
    "jsdoc/require-jsdoc": [
      "warn",
      {
        "contexts": [
          "FunctionExpression",
          "ClassDeclaration"
        ],
        "require": {
          "FunctionExpression": true,
          "ClassDeclaration": true
        }
      }
    ],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-restricted-imports": [
      "warn",
      {
        "paths": [
          {
            "name": "crypto",
            "message": "Use secure crypto utilities from healthcare security package"
          }
        ]
      }
    ],
    "no-warning-comments": [
      "warn",
      {
        "terms": [
          "todo",
          "fixme",
          "hack"
        ],
        "location": "start"
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}"
      ],
      "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "jsdoc/require-jsdoc": "off"
      }
    },
    {
      "files": [
        "**/*.config.{js,ts}"
      ],
      "rules": {
        "no-console": "off",
        "import/no-extraneous-dependencies": "off"
      }
    },
    {
      "files": [
        "src/compliance/**/*.{ts,tsx}"
      ],
      "rules": {
        "no-console": "error",
        "typescript/no-unsafe-assignment": "error",
        "typescript/no-unsafe-member-access": "error",
        "typescript/no-unsafe-call": "error",
        "typescript/no-unsafe-return": "error",
        "typescript/prefer-optional-chain": "error",
        "typescript/prefer-nullish-coalescing": "error",
        "jsdoc/require-jsdoc": "error"
      }
    },
    {
      "files": [
        "src/agents/**/*.{ts,tsx}"
      ],
      "rules": {
        "jsdoc/require-jsdoc": "error",
        "no-console": "warn"
      }
    },
    {
      "files": [
        "src/patient-data/**/*.{ts,tsx}",
        "src/medical-records/**/*.{ts,tsx}",
        "src/appointments/**/*.{ts,tsx}",
        "src/compliance/**/*.{ts,tsx}"
      ],
      "rules": {
        "typescript/no-unsafe-assignment": "error",
        "typescript/no-unsafe-member-access": "error",
        "typescript/no-unsafe-call": "error",
        "typescript/no-unsafe-return": "error",
        "no-console": "error",
        "jsdoc/require-jsdoc": "error",
        "prefer-const": "error",
        "no-var": "error"
      }
    },
    {
      "files": [
        "src/components/**/*.{tsx,ts}"
      ],
      "rules": {
        "jsx-a11y/alt-text": "error",
        "jsx-a11y/anchor-is-valid": "error",
        "jsx-a11y/aria-props": "error",
        "jsx-a11y/aria-proptypes": "error",
        "jsx-a11y/aria-unsupported-elements": "error",
        "jsx-a11y/role-has-required-aria-props": "error",
        "jsx-a11y/role-supports-aria-props": "error",
        "react/jsx-no-target-blank": "error",
        "react/no-unescaped-entities": "error"
      }
    },
    {
      "files": [
        "**/logger/**/*.{ts,js}",
        "**/console-manager.ts",
        "**/logging/**/*.{ts,js}",
        "**/healthcare-logger.ts"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "**/orchestration/**/*.{ts,js}",
        "**/tools/**/orchestration/**/*.{ts,js}"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "**/tools/**/backend/**/*.{ts,js}",
        "**/tools/**/setup.ts"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "**/audit*/**/*.{ts,js}",
        "**/tools/**/audit*/**/*.{ts,js}"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "**/validators/**/*.{ts,js}",
        "**/packages/**/validators/**/*.{ts,js}",
        "**/generate-*.ts",
        "**/generate-*.js"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "**/services/**/*.{ts,js}",
        "**/packages/**/services/**/*.{ts,js}",
        "**/governance/**/*.{ts,js}",
        "**/compliance/**/*.{ts,js}",
        "**/analytics/**/*.{ts,js}",
        "**/ai-*/**/*.{ts,js}",
        "**/protocol/**/*.{ts,js}",
        "**/agui-*/**/*.{ts,js}"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "**/utils/**/*.{ts,js}",
        "**/packages/**/utils/**/*.{ts,js}",
        "**/hooks/**/*.{ts,tsx}"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "**/scripts/**/*.{js,ts,cjs}",
        "**/fix-*.cjs",
        "**/fix-*.js",
        "**/fix-*.ts",
        "**/debug-*.js",
        "**/debug-*.ts",
        "**/quick-fix*.cjs",
        "**/simple-fix*.cjs"
      ],
      "rules": {
        "no-console": "off",
        "no-unused-vars": "warn"
      }
    },
    {
      "files": [
        "**/security/**/*.{ts,js}",
        "**/encryption.ts"
      ],
      "rules": {
        "no-restricted-imports": "off",
        "no-console": "off"
      }
    },
    {
      "files": [
        "**/debug*/**/*.{ts,js}",
        "**/tools/**/debug*/**/*.{ts,js}",
        "**/security-analysis.ts",
        "**/security-audit.ts"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "**/fix-*.cjs",
        "**/fix-*.js",
        "**/fix-*.ts",
        "**/quick-fix*.cjs",
        "**/simple-fix*.cjs",
        "**/analyze-*.js",
        "**/analyze-*.ts"
      ],
      "rules": {
        "no-console": "off",
        "no-unused-vars": "warn"
      }
    },
    {
      "files": [
        "**/logging/**/*.{ts,js}",
        "**/logger/**/*.{ts,js}",
        "**/console-manager.ts",
        "**/healthcare-logger.ts",
        "**/packages/**/logging/**/*.{ts,js}"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "**/config*/**/*.{ts,js}",
        "**/*.config.{js,ts}",
        "**/setup*.ts",
        "**/vitest.config.*",
        "**/jest.config.*"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/**",
    "**/node_modules/**",
    "node_modules/",
    "**/node_modules/",
    "dist/**",
    "build/**",
    "coverage/**",
    "test-results/**",
    "*.min.js",
    "playwright-report/**",
    ".next/**",
    ".turbo/**",
    "**/node_modules/**",
    "tools/tests/**",
    "tools/reports/**",
    ".serena/**",
    ".specify/**",
    ".oxlint_cache/**",
    "bun.lock",
    "pnpm-lock.yaml",
    "*.log",
    "*.tmp",
    "*.cache",
    "**/*.test.{ts,tsx,js,jsx}",
    "**/*.spec.{ts,tsx,js,jsx}",
    "vitest.config.*",
    "playwright.config.*",
    "vite.config.*",
    "tailwind.config.*"  
  ],
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "settings": {
    "healthcare": {
      "lgpdCompliance": true,
      "anvisaValidation": true,
      "cfmStandards": true,
      "patientDataValidation": true,
      "auditRequirements": true,
      "brazilianDataResidency": true
    },
    "performance": {
      "maxFileSize": "500kb",
      "maxLines": 2000,
      "complexityThreshold": 10
    }
  }
}