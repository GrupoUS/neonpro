{
  "editor.defaultFormatter": "biomejs.biome",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[graphql]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  
  // ðŸŽ¯ PERFORMANCE OPTIMIZATIONS
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  
  // ðŸš€ MEMORY-EFFICIENT CODE ACTIONS
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  
  // ðŸ”§ BIOME EXTENSION SPECIFIC SETTINGS
  "biome.enabled": true,
  "biome.lspBin": "./node_modules/@biomejs/biome/bin/biome",
  "biome.rename": true,
  
  // ðŸ§  MEMORY & PERFORMANCE LIMITS
  "emmet.showExpandedAbbreviation": "never",
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/.turbo/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/playwright-report/**": true,
    "**/test-results/**": true,
    "**/logs/**": true,
    "**/temp-*": true
  },
  
  // ðŸŽ¯ SEARCH EXCLUSIONS FOR PERFORMANCE
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/coverage": true,
    "**/playwright-report": true,
    "**/test-results": true,
    "**/logs": true,
    "**/temp-*": true,
    "**/.git": true,
    "**/pnpm-lock.yaml": true,
    "**/package-lock.json": true
  },
  
  // ðŸ”„ REDUCE AUTO-REFRESH FREQUENCY
  "files.autoSave": "onFocusChange",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  }
}