{
	"version": "0.2.0",
	"configurations": [
		
		// ================================
		// ğŸŒ NEXT.JS DEBUGGING
		// ================================
		{
			"name": "ğŸš€ Next.js: Debug Client-side",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/next",
			"args": [
				"dev"
			],
			"cwd": "${workspaceFolder}/apps/web",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"name": "ğŸ¥ Next.js: Debug Healthcare Mode",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/next",
			"args": [
				"dev"
			],
			"cwd": "${workspaceFolder}/apps/web",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "development",
				"HEALTHCARE_MODE": "true",
				"COMPLIANCE_LOGGING": "true",
				"LGPD_AUDIT": "true"
			}
		},
		{
			"name": "ğŸ”— Next.js: Debug Server-side",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/next",
			"args": [
				"dev"
			],
			"cwd": "${workspaceFolder}/apps/web",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "development"
			},
			"serverReadyAction": {
				"pattern": "started server on .+, url: (https?://.+)",
				"uriFormat": "%s",
				"action": "debugWithChrome"
			}
		},

		// ================================
		// ğŸŒ NODE.JS API DEBUGGING
		// ================================
		{
			"name": "ğŸš€ Node.js: Debug API Server",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/apps/api/src/index.ts",
			"cwd": "${workspaceFolder}/apps/api",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "development"
			},
			"runtimeArgs": [
				"--loader",
				"tsx/esm"
			]
		},
		{
			"name": "ğŸ¥ Node.js: Debug Healthcare API",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/apps/api/src/index.ts",
			"cwd": "${workspaceFolder}/apps/api",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "development",
				"HEALTHCARE_MODE": "true",
				"ANVISA_COMPLIANCE": "true",
				"CFM_STANDARDS": "true",
				"MEDICAL_AUDIT_LOGGING": "true"
			},
			"runtimeArgs": [
				"--loader",
				"tsx/esm"
			]
		},

		// ================================
		// ğŸ§ª TESTING & DEBUGGING
		// ================================
		{
			"name": "ğŸ§ª Vitest: Debug Unit Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/vitest",
			"args": [
				"run",
				"--reporter=verbose"
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "test"
			}
		},
		{
			"name": "ğŸ¥ Vitest: Debug Healthcare Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/vitest",
			"args": [
				"run",
				"--reporter=verbose",
				"packages/compliance"
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "test",
				"HEALTHCARE_MODE": "true",
				"COMPLIANCE_TESTING": "true"
			}
		},
		{
			"name": "ğŸ­ Playwright: Debug E2E Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/playwright",
			"args": [
				"test",
				"--debug"
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "test"
			}
		},

		// ================================
		// â˜ï¸ VERCEL & EDGE FUNCTIONS
		// ================================
		{
			"name": "â˜ï¸ Vercel: Debug Edge Functions",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/vercel",
			"args": [
				"dev",
				"--debug"
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "development",
				"VERCEL_ENV": "development"
			}
		},
		{
			"name": "ğŸ¥ Vercel: Debug Healthcare Functions",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/vercel",
			"args": [
				"dev",
				"--debug"
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "development",
				"VERCEL_ENV": "development",
				"HEALTHCARE_MODE": "true",
				"COMPLIANCE_EDGE": "true"
			}
		},

		// ================================
		// ğŸ”§ UTILITY DEBUGGING
		// ================================
		{
			"name": "ğŸ”§ TypeScript: Debug Compilation",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/tsc",
			"args": [
				"--noEmit",
				"--incremental",
				"--pretty"
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
			"name": "ğŸ¯ Biome: Debug Formatting",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/biome",
			"args": [
				"check",
				"--verbose",
				"."
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			]
		},

		// ================================
		// ğŸ“Š PERFORMANCE PROFILING
		// ================================
		{
			"name": "ğŸ“Š Performance: Profile Next.js",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/next",
			"args": [
				"dev"
			],
			"cwd": "${workspaceFolder}/apps/web",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "development",
				"NODE_OPTIONS": "--inspect --max-old-space-size=4096"
			},
			"outputCapture": "std"
		},
		{
			"name": "ğŸ¥ Performance: Profile Healthcare Features",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/next",
			"args": [
				"dev"
			],
			"cwd": "${workspaceFolder}/apps/web",
			"console": "integratedTerminal",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "development",
				"NODE_OPTIONS": "--inspect --max-old-space-size=4096",
				"HEALTHCARE_MODE": "true",
				"PERFORMANCE_MONITORING": "true"
			},
			"outputCapture": "std"
		}
	],
	"compounds": [
		{
			"name": "ğŸš€ Full Stack: Debug Client + API",
			"configurations": [
				"ğŸš€ Next.js: Debug Client-side",
				"ğŸš€ Node.js: Debug API Server"
			],
			"stopAll": true
		},
		{
			"name": "ğŸ¥ Healthcare Stack: Debug All",
			"configurations": [
				"ğŸ¥ Next.js: Debug Healthcare Mode",
				"ğŸ¥ Node.js: Debug Healthcare API"
			],
			"stopAll": true
		},
		{
			"name": "ğŸ§ª Test Suite: Debug All Tests",
			"configurations": [
				"ğŸ§ª Vitest: Debug Unit Tests",
				"ğŸ­ Playwright: Debug E2E Tests"
			],
			"stopAll": true
		},
		{
			"name": "ğŸ“Š Performance Suite: Profile All",
			"configurations": [
				"ğŸ“Š Performance: Profile Next.js",
				"ğŸ¥ Performance: Profile Healthcare Features"
			],
			"stopAll": true
		}
	]
}