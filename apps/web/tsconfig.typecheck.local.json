{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "e2e/**/*",
    "**/*.spec.ts", 
    "**/*.e2e.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}