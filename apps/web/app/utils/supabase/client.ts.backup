// app/utils/supabase/client.ts// Updated client with proper error handlingimport { createBrowserClient } from "@supabase/ssr";
export function createClient() {
  const supabaseUrl = process.env.NEXT_PUBLIC_SUPABASE_URL!;
  const supabaseAnonKey = process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY!;

  if (!(supabaseUrl && supabaseAnonKey)) {
    throw new Error('Supabase configuration is missing');
  }

  return createBrowserClient(supabaseUrl, supabaseAnonKey);
}

// Legacy supportexport { createClient as createLegacyClient };
// Simplified optimized client for nowexport function createOptimizedClient(_clinicId: string) {
  return createClient;
}
