{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "tsBuildInfoFile": "./.tsbuildinfo",
    "types": ["node", "@types/node"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "jsx": "react-jsx",
    "strict": true,
    "noResolve": false,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "@neonpro/*": ["../../packages/*/src"],
      "@neonpro/database": ["../../packages/database/src"],
      "@neonpro/database/*": ["../../packages/database/src/*"],

      "@neonpro/healthcare-core": ["../../packages/healthcare-core/src"],
      "@neonpro/healthcare-core/*": ["../../packages/healthcare-core/src/*"],

      "@neonpro/ui": ["../../packages/ui/src"],
      "@neonpro/ui/*": ["../../packages/ui/src/*"],
      "@neonpro/utils": ["../../packages/utils/src"],
      "@neonpro/utils/*": ["../../packages/utils/src/*"],
      "@neonpro/security": ["../../packages/security/src"],
      "@neonpro/security/*": ["../../packages/security/src/*"]
    }
  },
  "references": [
    { "path": "../../packages/ai-services" },
    { "path": "../../packages/database" },
    { "path": "../../packages/healthcare-core" },
    { "path": "../../packages/security" },
    { "path": "../../packages/shared" },
    { "path": "../../packages/types" }
  ],
  "include": ["src/**/*", "vite-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**/*",
    "**/*.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "src/test/**",
    "src/test-setup.ts"
  ]
}
