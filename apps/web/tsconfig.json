{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@neonpro/ui": [
        "../../packages/ui/src"
      ],
      "@neonpro/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@neonpro/shared": [
        "../../packages/shared/src"
      ],
      "@neonpro/utils": [
        "../../packages/utils/src"
      ],
      "@neonpro/types": [
        "../../packages/types/src"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.tsx",
    "src/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components/ui/_deprecated/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}