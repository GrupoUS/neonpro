{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/styles/*": ["./styles/*"],
      "@/types/*": ["./types/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/utils/*": ["./utils/*"],
      "@/app/*": ["./app/*"],
      "@neonpro/ui": ["../../packages/ui/src"],
      "@neonpro/ui/*": ["../../packages/ui/src/*"],
      "@neonpro/ai": ["../../packages/ai/src"],
      "@neonpro/ai/*": ["../../packages/ai/src/*"],
      "@neonpro/types": ["../../packages/types/src"],
      "@neonpro/types/*": ["../../packages/types/src/*"],
      "@neonpro/utils": ["../../packages/utils/src"],
      "@neonpro/utils/*": ["../../packages/utils/src/*"],
      "@neonpro/domain": ["../../packages/domain/src"],
      "@neonpro/domain/*": ["../../packages/domain/src/*"],
      "@neonpro/core-services": ["../../packages/core-services/src"],
      "@neonpro/core-services/*": ["../../packages/core-services/src/*"],
      "@neonpro/compliance": ["../../packages/compliance/src"],
      "@neonpro/compliance/*": ["../../packages/compliance/src/*"],
      "date-fns": ["./lib/placeholders/date-fns"],
      "zustand": ["./lib/placeholders/zustand"],
      "zustand/middleware": ["./lib/placeholders/zustand-middleware"],
      "zustand/middleware/immer": ["./lib/placeholders/zustand-immer"],
      "@jest/globals": ["./lib/placeholders/jest-globals"],
      "xlsx": ["./lib/placeholders/xlsx"],
      "jspdf": ["./lib/placeholders/jspdf"],
      "lru-cache": ["./lib/placeholders/lru-cache"]
    },
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../../packages/*/src/**/*.ts",
    "../../packages/*/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next/types/**/*",
    "__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
