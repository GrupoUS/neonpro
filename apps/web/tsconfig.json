{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "checkJs": false,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "composite": true,
    "types": ["vite/client", "vitest/globals", "node", "recharts"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@neonpro/shared": ["../../packages/shared/src"],
      "@neonpro/shared/*": ["../../packages/shared/src/*"],
      "@neonpro/utils": ["../../packages/utils/src"],
      "@neonpro/types": ["../../packages/types/src"],
      "@neonpro/types/*": ["../../packages/types/src/*"],
      "@neonpro/ui": ["../../packages/ui/src"],
      "@neonpro/ui/lib/utils": ["../../packages/ui/src/lib/utils.ts"],
      "@neonpro/ui/theme": ["../../packages/ui/src/theme"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../../packages/**",
    "../api/**/*",
    "e2e/**/*",
    "**/*.spec.ts",
    "**/*.e2e.ts",
    "src/components/ui/_deprecated/**",
    "src/components/examples/**",
    "src/examples/**",
    "src/lib/prefetching/**",
    "src/lib/cache/**",
    "src/components/common/SmartPrefetcher.tsx",
    "src/components/patients/PatientRegistrationWizard.tsx",
    "src/components/patients/AdvancedSearchDialog.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/services/appointment-templates.service.ts"
  ],
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/utils" },
    { "path": "../../packages/shared" },
    { "path": "../../packages/ui" }
  ]
}