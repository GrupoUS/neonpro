{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "tsBuildInfoFile": "./.tsbuildinfo",
    "types": ["node", "@types/node"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "jsx": "react-jsx",
    "strict": true,
    "noResolve": false,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "@neonpro/*": ["../../packages/*/src"],
      "@neonpro/database": ["../../packages/database/src"],
      "@neonpro/database/*": ["../../packages/database/src/*"],
      "@neonpro/core": ["../../packages/core/src"],
      "@neonpro/core/*": ["../../packages/core/src/*"],
      "@neonpro/ui": ["../../packages/ui/src"],
      "@neonpro/ui/*": ["../../packages/ui/src/*"],
      "@neonpro/types": ["../../packages/types/src"],
      "@neonpro/types/*": ["../../packages/types/src/*"],
      "@neonpro/config": ["../../packages/config/src"],
      "@neonpro/config/*": ["../../packages/config/src/*"]
    }
  },
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/database" },
    { "path": "../../packages/types" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/config" }
  ],
  "include": [
    "src/**/*", 
    "vite-env.d.ts", 
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/**/*.d.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/__tests__/**/*",
    "src/test/**/*",
    "src/test-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**/*",
    "**/*.js"
  ]
}
