{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@neonpro/shared": [
        "../../packages/shared/src"
      ],
      "@neonpro/utils": [
        "../../packages/utils/src"
      ],
      "@neonpro/types": [
        "../../packages/types/src"
      ],
      "@neonpro/ui": [
        "../../packages/ui/src"
      ],
      "@neonpro/ui/lib/utils": [
        "../../packages/ui/src/lib/utils.ts"
      ],
      "@neonpro/ui/theme": [
        "../../packages/ui/src/theme"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../../packages/**",
    "../api/**/*",
    "e2e/**/*",
    "**/*.spec.ts",
    "**/*.e2e.ts",
    "src/components/ui/_deprecated/**",
    "src/components/examples/**",
    "src/examples/**",
    "src/lib/ai-chat/**",
    "src/lib/prefetching/**",
    "src/lib/cache/**",
    "src/components/common/SmartPrefetcher.tsx",
    "src/components/patients/PatientRegistrationWizard.tsx",
    "src/components/patients/AdvancedSearchDialog.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/services/appointment-templates.service.ts"
  ]
}
