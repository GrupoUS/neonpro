{
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "es2021"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "dist",
    "rootDir": "../../",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./lib/*", "./src/lib/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/types/*": ["./src/types/*"],
      "@/hooks/*": ["./src/hooks/*", "./hooks/*"],
      "@/utils/*": ["./src/utils/*", "./utils/*"],
      "@/features/*": ["./src/features/*"],
      "@/test-utils/*": ["./test-utils/*"],

      "@neonpro/types": ["../../packages/types/src"],
      "@neonpro/types/*": ["../../packages/types/src/*"],
      "@neonpro/utils": ["../../packages/utils/src"],
      "@neonpro/utils/*": ["../../packages/utils/src/*"],
      "@neonpro/core-services": ["../../packages/core-services/src"],
      "@neonpro/core-services/*": ["../../packages/core-services/src/*"],
      "@neonpro/security": ["../../packages/security/src"],
      "@neonpro/security/*": ["../../packages/security/src/*"],

      "@neonpro/database": ["../../packages/database/src"],
      "@neonpro/database/*": ["../../packages/database/src/*"],
      "@neonpro/shared": ["../../packages/shared/src"],
      "@neonpro/shared/*": ["../../packages/shared/src/*"],
      "@neonpro/cache": ["../../packages/cache/src"],
      "@neonpro/cache/*": ["../../packages/cache/src/*"],

      "qrcode.react": ["./lib/placeholders/qrcode-react"]
    },
    "noEmit": true
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "hooks/**/*",
    "contexts/**/*",
    "utils/**/*",
    "src/**/*",
    "types/**/*",
    "providers/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next/types/**/*",
    "__tests__/**/*",
    "tests/**",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "tests/e2e/**",
    "app/components/ai-scheduling-demo.tsx",
    "app/components/intelligent-scheduler.tsx",
    "app/components/neonpro-healthcare-dashboard.tsx",
    "app/components/performance-monitoring/**",
    "app/api/scheduling/**",
    "src/lib/compliance/**",
    "src/hooks/useANVISA*.ts",
    "src/hooks/use-emergency-*.ts",
    "src/hooks/use-ai-*.ts",
    "app/hooks/use-ai-scheduling.ts",
    "app/components/scheduling-analytics-dashboard.tsx",
    "app/dashboard/**",
    "app/api/cron/drift-monitoring/**",
    "test-mvp-compilation.ts",
    "types/common.ts"
  ],
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/utils" },
    { "path": "../../packages/core-services" },
    { "path": "../../packages/database" },
    { "path": "../../packages/shared" },
    { "path": "../../packages/security" }
  ]
}
