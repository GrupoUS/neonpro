// Constitutional healthcare utilitiesexport const HealthcareUtils = {
  // Anxiety reduction helpers  getAnxietyAwareColors: (level: 'low' | 'medium' | 'high') => {
    switch (level) {
      case 'high':
        return {
          primary: "bg-emerald-50 border-emerald-200",
    accent: "text-emerald-700",
        };
      case 'medium':
        return { primary: 'bg-sky-50 border-sky-200',
    accent: 'text-sky-700' };
      default: return {;
          primary: "bg-slate-50 border-slate-200",
    accent: "text-slate-700",
        };
    }
  },

  // LGPD compliance helpers  maskSensitiveData: (data: string,
    type: 'cpf' | 'phone' | 'email') => {switch (type) {
      case 'cpf':
        return data.replace(/(\d{3})\.\d{3}\.\d{3}-(\d{2})/, '$1.***.***-$2');
      case 'phone':
        return data.replace(/(\(\d{2}\))\s\d{4,5}-(\d{4})/, '$1 ****-$2');
      case 'email': {
        const [user, domain] = data.split('@');
        return `${user.slice(0, 2)}***@${domain}`;
      }
      default:
        return data;
    }
  },

  // Constitutional healthcare age calculation  calculateAge: (birthDate: string) => {
    const today = new Date();
    const birth = new Date(birthDate);
    let age = today.getFullYear() - birth.getFullYear();
    const monthDiff = today.getMonth() - birth.getMonth();

    if (
      monthDiff < 0 ||
      (monthDiff === 0 && today.getDate() < birth.getDate)
    ) {
      age--;
    }
    return age;
  }
} as const;
