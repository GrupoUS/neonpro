{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "noEmit": true,
    "incremental": false,
    "plugins": []
  },
  "include": [
    "middleware.ts",
    "next-env.d.ts",
    "types/shims.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next/**",
    "lib/**",
    "src/**",
    "hooks/**",
    "providers/**",
    "contexts/**",
    "utils/**",
    "components/**",
    "__tests__/**",
    "tests/**",
    "tests/**/*",
    "tests/e2e/**",
    "app/(dashboard)/**",
    "app/dashboard/**",
    "app/**/automated-analysis/**",
    "app/**/financial/reconciliation/**",
    "app/api/auth/**",
    "app/api/**/webauthn/**"
  ]
}
