{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "neonpro-aesthetic-api",
  "alias": ["api.neonpro.com.br"],
  "regions": ["gru1"],
  "trailingSlash": false,
  "cleanUrls": true,
  "projectSettings": {
    "devCommand": "turbo run dev --filter=api",
    "buildCommand": "turbo run build:vercel --filter=api",
    "outputDirectory": ".next",
    "installCommand": "bun install --frozen-lockfile"
  },
  "env": {
    "NODE_ENV": "production",
    "VERCEL_REGION": "gru1",
    "LGPD_ENFORCEMENT": "strict",
    "DATA_RESIDENCY": "brazil",
    "CLIENT_DATA_PROTECTION": "enabled",
    "AUDIT_LOGGING": "enabled",
    "API_RATE_LIMIT": "1000/hour"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "SKIP_BUILD_STATIC_GENERATION": "false",
      "TURBO_REMOTE_CACHE_SIGNATURE": "true"
    }
  },
  "functions": {
    "apps/api/src/pages/api/**/*.ts": {
      "runtime": "edge",
      "regions": ["gru1"],
      "memory": 256,
      "maxDuration": 30
    },
    "apps/api/src/app/api/**/*.ts": {
      "runtime": "edge",
      "regions": ["gru1"],
      "memory": 512,
      "maxDuration": 60
    },
    "app/api/trpc/**/*": {
      "runtime": "edge",
      "regions": ["gru1"],
      "memory": 512,
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-LGPD-Compliant",
          "value": "true"
        },
        {
          "key": "X-CFM-Compliant",
          "value": "true"
        },
        {
          "key": "X-ANVISA-Compliant",
          "value": "true"
        },
        {
          "key": "X-Data-Residency",
          "value": "brazil-only"
        },
        {
          "key": "X-Application-Type",
          "value": "aesthetic-clinic"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=self, microphone=self, geolocation=(), payment=(), usb=()"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' *.vercel-analytics.com; style-src 'self' 'unsafe-inline' *.googleapis.com; img-src 'self' data: blob: https:; font-src 'self' data: *.gstatic.com; connect-src 'self' wss: ws: https://api.supabase.com *.supabase.co; media-src 'self' blob:; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"
        },
        {
          "key": "X-LGPD-Data-Protection",
          "value": "client-data-classified"
        },
        {
          "key": "X-Rate-Limit-Limit",
          "value": "1000"
        },
        {
          "key": "X-Rate-Limit-Window",
          "value": "3600"
        },
        {
          "key": "X-Aesthetic-Service",
          "value": "true"
        }
      ]
    },
    {
      "source": "/api/patients/(.*)",
      "headers": [
        {
          "key": "X-Data-Classification",
          "value": "client-sensitive"
        },
        {
          "key": "X-LGPD-Processing-Basis",
          "value": "client-consent"
        },
        {
          "key": "X-Data-Retention",
          "value": "365-days"
        },
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, private"
        }
      ]
    },
    {
      "source": "/api/telemedicine/(.*)",
      "headers": [
        {
          "key": "X-LGPD-Processing-Basis",
          "value": "client-consent"
        },
        {
          "key": "X-Aesthetic-Grade",
          "value": "true"
        },
        {
          "key": "X-Session-Encryption",
          "value": "AES-256-GCM"
        },
        {
          "key": "X-Rate-Limit-Limit",
          "value": "1000"
        },
        {
          "key": "X-Rate-Limit-Remaining",
          "value": "999"
        },
        {
          "key": "X-Rate-Limit-Reset",
          "value": "3600"
        }
      ]
    },
    {
      "source": "/api/adverse-events/(.*)",
      "headers": [
        {
          "key": "X-Data-Protection-Officer",
          "value": "dpo@neonpro.com.br"
        },
        {
          "key": "X-Client-Data-Protection",
          "value": "enhanced"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/health",
      "destination": "/api/health",
      "permanent": false
    },
    {
      "source": "/compliance",
      "destination": "/api/compliance/report",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "/api/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/health/check",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/compliance/audit",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/performance/metrics",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/anvisa/adverse-events/sync",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/data-protection/lgpd-retention",
      "schedule": "0 4 * * *"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
