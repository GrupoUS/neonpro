{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "lib": ["ES2022"],
    "types": ["node"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/middleware/*": ["./src/middleware/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/services/*": ["./src/services/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@neonpro/core": ["../../packages/core/src"],
      "@neonpro/core/*": ["../../packages/core/src/*"],
      "@neonpro/database": ["../../packages/database/dist"],
      "@neonpro/database/*": ["../../packages/database/dist/*"],
      "@neonpro/types": ["../../packages/types/src"],
      "@neonpro/types/*": ["../../packages/types/src/*"],
      "@neonpro/config": ["../../packages/config/src"],
      "@neonpro/config/*": ["../../packages/config/src/*"],
      "@neonpro/ui": ["../../packages/ui/src"],
      "@neonpro/ui/*": ["../../packages/ui/src/*"]
    },
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "include": ["src/**/*", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "tests/**/*",
    "src/__tests__/**/*",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/database" },
    { "path": "../../packages/types" },
    { "path": "../../packages/config" },
    { "path": "../../packages/ui" }
  ]
}
