{
  "name": "@neonpro/tools",
  "version": "1.0.0",
  "description": "NeonPro E2E Testing and Development Tools",
  "private": true,
  "type": "module",
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chrome": "playwright test --project=chrome",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:mobile": "playwright test --project=mobile",
    "test:e2e:visual": "playwright test --config=playwright.visual.config.ts",
    "test:e2e:accessibility": "playwright test --config=playwright.accessibility.config.ts",
    "test:e2e:performance": "playwright test --config=playwright.performance.config.ts",
    "test:e2e:ci": "playwright test --reporter=list",
    "test:e2e:report": "playwright show-report",
    "playwright:install": "playwright install",
    "playwright:install:deps": "playwright install --with-deps",
    "playwright:install:firefox": "playwright install firefox",
    "playwright:install:webkit": "playwright install webkit",
    "dev": "playwright test --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf test-results/ playwright-report/ .cache/"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-playwright": "^0.18.0",
    "typescript": "^5.3.0",
    "axe-core": "^4.8.2",
    "@axe-core/playwright": "^4.8.2",
    "lighthouse": "^11.4.0",
    "chrome-launcher": "^1.1.0",
    "playwright-lighthouse": "^4.0.0"
  },
  "dependencies": {
    "@neonpro/types": "0.1.0",
    "@neonpro/utils": "0.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "neonpro",
    "e2e-testing",
    "playwright",
    "accessibility",
    "performance",
    "healthcare-testing",
    "lgpd-testing"
  ],
  "author": "NeonPro Team",
  "license": "PROPRIETARY"
}
