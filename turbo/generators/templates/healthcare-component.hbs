import React from 'react';
{{#if lgpdCompliant}}
  import { useLGPDCompliance } from '@neonpro/compliance';
{{/if}}

interface
{{pascalCase name}}Props {
{{#if lgpdCompliant}}
  patientId?: string; consentRequired?: boolean;
{{/if}}
className?: string; children?: React.ReactNode; } /** *
{{pascalCase name}}
- Healthcare component with WCAG 2.1 AA compliance *
{{#if lgpdCompliant}}
  * ⚠️ LGPD Compliance: This component handles patient data *
{{/if}}
*/ export function
{{pascalCase name}}({
{{#if lgpdCompliant}}
  patientId, consentRequired = true,
{{/if}}
className, children, ...props }:
{{pascalCase name}}Props) {
{{#if lgpdCompliant}}
  const { hasConsent, requestConsent } = useLGPDCompliance({ patientId, purpose:
  '{{name}}
  component data processing', required: consentRequired }); if (consentRequired
  && !hasConsent) { return (
  <div className="p-4 border border-yellow-200 bg-yellow-50 rounded-lg">
    <p className="text-sm text-yellow-800">
      Consentimento necessário para exibir dados do paciente.
    </p>
    <button
      onClick="{requestConsent}"
      className="mt-2 px-3 py-1 bg-blue-600 text-white rounded text-sm hover:bg-blue-700"
    >
      Solicitar Consentimento
    </button>
  </div>
  ); }
{{/if}}

return (
<div
  className="{className}"
  role="region"
  aria-label="{{titleCase name}}"
  {...props}
>
  {children}
</div>
); }