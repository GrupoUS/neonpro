{
  "extends": "./tsconfig.json",
  "include": ["apps/**/*", "packages/**/*"],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/dist/**",
    "**/build/**",
    "node_modules"
  ],
  "compilerOptions": { "noEmit": true, "incremental": false }
}
