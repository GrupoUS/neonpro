{
  "extends": "./tsconfig.json",
  "include": [
    "apps/**/*", 
    "packages/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "tests/**/*",
    "tools/tests/**/*",
    "**/__tests__/**/*"
  ],
  "exclude": [
    "**/dist/**",
    "**/build/**",
    "node_modules"
  ],
  "compilerOptions": { 
    "noEmit": true, 
    "incremental": false,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true
  }
}
