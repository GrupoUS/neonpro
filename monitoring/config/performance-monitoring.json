{
  "metrics": {
    "responseTime": {
      "warning": 500,
      "critical": 1000,
      "unit": "ms"
    },
    "errorRate": {
      "warning": 1,
      "critical": 5,
      "unit": "%"
    },
    "uptime": {
      "warning": 99,
      "critical": 95,
      "unit": "%"
    },
    "memoryUsage": {
      "warning": 80,
      "critical": 95,
      "unit": "%"
    }
  },
  "endpoints": [
    "/api/health",
    "/api/v1/health",
    "/api/patients",
    "/api/appointments",
    "/api/auth/login"
  ],
  "monitoring": {
    "interval": 60,
    "retention": "30d",
    "aggregation": "5m"
  }
}
