# PNPM Configuration for NeonPro
# Memory and Performance Optimizations

# Auto install peer dependencies
auto-install-peers=true
strict-peer-dependencies=false

# Use exact versions to avoid resolution conflicts
save-exact=true
prefer-frozen-lockfile=true

# Performance optimizations
side-effects-cache=true
side-effects-cache-readonly=false

# Hoisting patterns for better performance
hoist-pattern[]=@types/*
hoist-pattern[]=@biomejs/*
hoist-pattern[]=ultracite*
hoist-pattern[]=biome*

# Node linker configuration
node-linker=isolated

# Registry settings
registry=https://registry.npmjs.org/

# Shamefully hoist for compatibility
shamefully-hoist=false

# Store directory (optional - uncomment if needed)
# store-dir=~/.pnpm-store