# NeonPro AI Services - Production Environment Configuration
# DO NOT COMMIT SENSITIVE VALUES TO VERSION CONTROL
# Use secure secret management systems in production

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
NODE_ENV=production
APP_ENV=production
PORT=3000
NEXT_PUBLIC_APP_URL=https://app.neonpro.com.br
VERCEL_URL=https://neonpro.vercel.app

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_PROJECT_ID=your_project_id
SUPABASE_ORGANIZATION_ID=your_org_id

# Database
DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres
DATABASE_DIRECT_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# =============================================================================
# REDIS CONFIGURATION (REMOVED - Using Supabase PostgreSQL for caching)
# =============================================================================
# REDIS_URL=redis://redis.your-provider.com:6379
# REDIS_PASSWORD=your_redis_password
# REDIS_TLS_ENABLED=true
# REDIS_CONNECTION_POOL_SIZE=10
# REDIS_MAX_RETRIES=3
# REDIS_RETRY_DELAY=1000

# =============================================================================
# SUPABASE CACHING CONFIGURATION (Replacement for Redis)
# =============================================================================
SUPABASE_CACHE_TABLE=cache_entries
SUPABASE_CACHE_TTL_DEFAULT=3600

# =============================================================================
# AI/ML SERVICES CONFIGURATION
# =============================================================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION_ID=your_openai_org_id
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Claude (backup)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Azure OpenAI (enterprise alternative)
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1
SENTRY_TRACES_SAMPLE_RATE=0.1

# PostHog (Analytics)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
POSTHOG_ENABLED=true

# DataDog (Infrastructure Monitoring)
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SITE=datadoghq.com
DATADOG_ENV=production
DATADOG_SERVICE=neonpro-ai-services
DATADOG_VERSION=1.0.0

# New Relic (APM)
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key
NEW_RELIC_APP_NAME=NeonPro AI Services
NEW_RELIC_ENABLED=true

# =============================================================================
# COMPLIANCE & SECURITY
# =============================================================================
# Encryption Keys (use strong, unique keys in production)
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# LGPD/GDPR Compliance
LGPD_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555
CONSENT_REQUIRED_FOR_AI=true
AUDIT_TRAIL_ENABLED=true

# ANVISA/CFM Compliance
ANVISA_COMPLIANCE_ENABLED=true
CFM_COMPLIANCE_ENABLED=true
MEDICAL_DATA_ENCRYPTION_REQUIRED=true
HEALTHCARE_PROFESSIONAL_AUTH_REQUIRED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_FLAGS_ENABLED=true
UNIVERSAL_CHAT_ENABLED=true
NO_SHOW_PREDICTION_ENABLED=true
ADVANCED_ANALYTICS_ENABLED=false
VOICE_COMMANDS_ENABLED=false
PREDICTIVE_SCHEDULING_ENABLED=false

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================
# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=512
CACHE_HIT_RATE_TARGET=0.85

# AI Service Timeouts
AI_SERVICE_TIMEOUT_MS=30000
AI_SERVICE_MAX_RETRIES=3
AI_SERVICE_RETRY_DELAY_MS=1000

# Database Connection Pooling
DB_POOL_SIZE=20
DB_MAX_CONNECTIONS=100
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=10000

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# WhatsApp Business API
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@neonpro.com.br
SENDGRID_FROM_NAME=NeonPro Healthcare

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+5511999999999

# Payment Gateway (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=7
LOG_TIMESTAMP=true
LOG_COLORIZE=false

# Structured Logging
STRUCTURED_LOGGING_ENABLED=true
LOG_CORRELATION_ID_ENABLED=true
LOG_PERFORMANCE_METRICS=true
LOG_COMPLIANCE_EVENTS=true

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_STORAGE_PROVIDER=s3
BACKUP_S3_BUCKET=neonpro-backups-prod
BACKUP_S3_REGION=sa-east-1

# =============================================================================
# CDN & STATIC ASSETS
# =============================================================================
CDN_ENABLED=true
CDN_URL=https://cdn.neonpro.com.br
STATIC_ASSETS_CACHE_TTL=31536000
IMAGE_OPTIMIZATION_ENABLED=true
COMPRESS_RESPONSES=true

# =============================================================================
# HEALTH CHECKS & MONITORING
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_TIMEOUT_MS=5000
HEALTH_CHECK_INTERVAL_MS=30000

# Service Dependencies Health Checks
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_SUPABASE_CACHE=true
HEALTH_CHECK_AI_SERVICES=true
HEALTH_CHECK_THIRD_PARTY_APIS=true

# =============================================================================
# SCALABILITY & LOAD BALANCING
# =============================================================================
CLUSTER_MODE=true
CLUSTER_WORKERS=auto
LOAD_BALANCER_ENABLED=true
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=2
MAX_INSTANCES=10
SCALE_UP_THRESHOLD_CPU=70
SCALE_UP_THRESHOLD_MEMORY=80
SCALE_DOWN_THRESHOLD_CPU=30
SCALE_DOWN_THRESHOLD_MEMORY=50

# =============================================================================
# DEVELOPMENT & DEBUGGING (disabled in production)
# =============================================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
DEVELOPMENT_TOOLS_ENABLED=false
HOT_RELOAD_ENABLED=false
SOURCE_MAPS_ENABLED=false

# =============================================================================
# REGIONAL SETTINGS
# =============================================================================
TIMEZONE=America/Sao_Paulo
LOCALE=pt-BR
CURRENCY=BRL
DATE_FORMAT=DD/MM/YYYY
TIME_FORMAT=HH:mm
DECIMAL_PLACES=2

# =============================================================================
# COMPLIANCE AUDIT TRAIL
# =============================================================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ENCRYPTION=true
AUDIT_LOG_IMMUTABLE=true
AUDIT_LOG_EXPORT_ENABLED=true

# =============================================================================
# AI SAFETY & ETHICS
# =============================================================================
AI_SAFETY_CHECKS_ENABLED=true
AI_BIAS_DETECTION_ENABLED=true
AI_EXPLAINABILITY_REQUIRED=true
AI_HUMAN_OVERSIGHT_REQUIRED=true
AI_DECISION_AUDIT_ENABLED=true
AI_ETHICS_COMMITTEE_REVIEW=true

# =============================================================================
# BRAZILIAN HEALTHCARE REGULATIONS
# =============================================================================
# ANVISA (National Health Surveillance Agency)
ANVISA_REGISTRATION_NUMBER=your_anvisa_registration
ANVISA_REPORTING_ENABLED=true
ANVISA_AUDIT_TRAIL_REQUIRED=true

# CFM (Federal Council of Medicine)
CFM_REGISTRATION_ENABLED=true
CFM_TELEMEDICINE_COMPLIANCE=true
CFM_MEDICAL_RECORD_INTEGRITY=true
CFM_PROFESSIONAL_AUTHORIZATION_REQUIRED=true

# ANS (National Supplementary Health Agency)
ANS_COMPLIANCE_ENABLED=true
ANS_REPORTING_REQUIRED=true

# LGPD (Brazilian Data Protection Law)
LGPD_DPO_CONTACT=dpo@neonpro.com.br
LGPD_PRIVACY_POLICY_URL=https://neonpro.com.br/privacy
LGPD_TERMS_OF_SERVICE_URL=https://neonpro.com.br/terms
LGPD_COOKIE_POLICY_URL=https://neonpro.com.br/cookies