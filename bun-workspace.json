{
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "ignore": [
    "node_modules",
    "dist",
    "build",
    ".git",
    "*.log"
  ],
  "hoist": [
    "typescript",
    "react",
    "react-dom",
    "@types/*",
    "tailwindcss",
    "vitest",
    "turbo"
  ],
  "strict": true,
  "linkWorkspacePackages": true
}