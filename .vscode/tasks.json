{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üéØ NEONPRO: Format Code",
      "type": "shell",
      "command": "npx",
      "args": ["ultracite", "format"],
      "group": "build",
      "detail": "Format all code using Ultracite",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        {
          "owner": "biome",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "üéØ NEONPRO: Check Code",
      "type": "shell",
      "command": "npx",
      "args": ["ultracite", "lint"],
      "group": "build",
      "detail": "Check all code using Ultracite",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        {
          "owner": "biome",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      ]
    },
    {
      "label": "üß™ NEONPRO: Run All Tests",
      "type": "shell",
      "command": "npx",
      "args": ["vitest", "run", "--reporter=verbose"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "detail": "Run all tests using Vitest with verbose output",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        {
          "owner": "vitest",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^\\s*‚ùØ\\s+(.+)$",
              "message": 1
            },
            {
              "regexp": "^\\s+(.*):(\\d+):(\\d+)$",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ]
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "üß™ NEONPRO: Watch Tests",
      "type": "shell",
      "command": "npx",
      "args": ["vitest", "--watch", "--reporter=verbose"],
      "group": "test",
      "detail": "Watch and run tests using Vitest",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "vitest",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^\\s*‚ùØ\\s+(.+)$",
              "message": 1
            },
            {
              "regexp": "^\\s+(.*):(\\d+):(\\d+)$",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*DEV.*$",
            "endsPattern": "^.*waiting for changes.*$"
          }
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "label": "üß™ NEONPRO: Run Current Test File",
      "type": "shell",
      "command": "npx",
      "args": ["vitest", "run", "${relativeFile}", "--reporter=verbose"],
      "group": "test",
      "detail": "Run tests in the currently active file",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        {
          "owner": "vitest",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^\\s*‚ùØ\\s+(.+)$",
              "message": 1
            },
            {
              "regexp": "^\\s+(.*):(\\d+):(\\d+)$",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ]
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "üß™ NEONPRO: Test Coverage",
      "type": "shell",
      "command": "npx",
      "args": ["vitest", "run", "--coverage"],
      "group": "test",
      "detail": "Run tests with coverage report",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        {
          "owner": "vitest",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^\\s*‚ùØ\\s+(.+)$",
              "message": 1
            },
            {
              "regexp": "^\\s+(.*):(\\d+):(\\d+)$",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ]
        }
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "üé≠ NEONPRO: Run All E2E Tests",
      "type": "shell",
      "command": "npx",
      "args": ["playwright", "test", "--reporter=html"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "detail": "Run all E2E tests using Playwright with HTML report",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        {
          "owner": "playwright",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^\\s*(.*):(\\d+):(\\d+)\\s+(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "message": 4
            }
          ]
        }
