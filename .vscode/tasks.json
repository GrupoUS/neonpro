			"label": "üéØ NEONPRO: Format Code",
			"type": "shell",
			"command": "pnpm",
			"args": ["format"],
			"group": "build",
			"detail": "Format all code using dprint",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				{
					"owner": "dprint",
					"fileLocation": ["relative", "${workspaceFolder}"],
					"pattern": {
						"regexp": "^Error\\s+(.*):(\\d+):(\\d+)\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"message": 4,
						"severity": "error"
					}
				}
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
