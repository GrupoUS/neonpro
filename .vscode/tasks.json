			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"clear": true
			}
		},		{
			"label": "üé≠ NEONPRO: E2E Development Mode",
			"type": "shell",
			"command": "npx",
			"args": ["playwright", "test", "${input:e2eMode}"],
			"group": "test",
			"detail": "Run E2E tests with development options (headed/debug/UI/current file)",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				{
					"owner": "playwright",
					"fileLocation": ["relative", "${workspaceFolder}"],
					"pattern": [
						{
							"regexp": "^\\s*(.*):(\\d+):(\\d+)\\s+(.*)$",
							"file": 1,
							"line": 2,
							"column": 3,
							"message": 4
						}
					]
				}
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "üé≠ NEONPRO: E2E Tests (Headed)",
			"type": "shell",
			"command": "npx",
			"args": ["playwright", "test", "--headed"],
			"group": "test",
			"detail": "Run E2E tests in headed mode (visible browser)",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				{
					"owner": "playwright",
