    },
    {
      "label": "üé≠ NEONPRO: Show Last Test Report",
      "type": "shell",
      "command": "npx",
      "args": ["playwright", "show-report"],
      "group": "test",
      "detail": "Show the last Playwright test report",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "üîç NEONPRO: Check Fixes",
      "type": "shell",
      "command": "pnpm",
      "args": ["ultracite:lint", "--max-diagnostics=10"],
      "group": "build"
    },
    {
      "label": "Check Biome Fixes",
      "type": "shell",
      "command": "pnpm ultracite:lint"
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "pnpm ultracite:format"
    },
    {
      "label": "Quick Lint Check",
      "type": "shell",
      "command": "pnpm dlx @biomejs/biome check . --max-diagnostics=5"
    },
    {
      "label": "Test Hook Fix",
      "type": "shell",
      "command": "pnpm dlx @biomejs/biome check .claude/hooks/cross-platform/pre-tool-intelligence.js"
    },
    {
      "label": "Test Utils Fix",
      "type": "shell",
      "command": "pnpm dlx @biomejs/biome check .claude/hooks/cross-platform/utils.js"
    },
    {
      "label": "Test Utils Fix 2",
      "type": "shell",
      "command": "pnpm dlx @biomejs/biome check .claude/hooks/cross-platform/utils.js"
    },
    {
      "label": "Apply Unsafe Fixes",
      "type": "shell",
      "command": "pnpm dlx @biomejs/biome check --write --unsafe . --max-diagnostics=20"
    }
  ],
  "inputs": [
    {
      "id": "e2eMode",
      "type": "pickString",
      "description": "Choose E2E test mode:",
      "options": [
        {
          "label": "Headed Mode (visible browser)",
          "value": "--headed"
        },
        {
          "label": "Debug Mode (step-by-step)",
          "value": "--debug"
        },
        {
          "label": "UI Mode (interactive)",
          "value": "--ui"
        },
        {
          "label": "Current File",
          "value": "${relativeFile}"
        }
      ]
    }
  ]
}
