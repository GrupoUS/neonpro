					"pattern": [
						{
							"regexp": "^\\s*(.*):(\\d+):(\\d+)\\s+(.*)$",
							"file": 1,
							"line": 2,
							"column": 3,
							"message": 4
						}
					]
				}
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"clear": true
			}
		},
		{
			"label": "üé≠ NEONPRO: E2E Tests (Debug)",
			"type": "shell",
			"command": "npx",
			"args": ["playwright", "test", "--debug"],
			"group": "test",
			"detail": "Run E2E tests in debug mode",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "üé≠ NEONPRO: Show Last Test Report",
			"type": "shell",
			"command": "npx",
			"args": ["playwright", "show-report"],
			"group": "test",
			"detail": "Show the last Playwright test report",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		}
	],
	"inputs": [
		{
			"id": "e2eMode",
			"type": "pickString",
			"description": "Choose E2E test mode:",
			"options": [
				{
					"label": "Headed Mode (visible browser)",
					"value": "--headed"
				},
				{
					"label": "Debug Mode (step-by-step)",
					"value": "--debug"
				},
				{
					"label": "UI Mode (interactive)",
					"value": "--ui"
				},
				{
					"label": "Current File",
					"value": "${relativeFile}"
				}
			]
		}
	]
}