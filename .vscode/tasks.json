    {
      "label": "üé≠ NEONPRO: E2E Tests (Debug)",
      "type": "shell",
      "command": "npx",
      "args": ["playwright", "test", "--debug"],
      "group": "test",
      "detail": "Run E2E tests in debug mode",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "clear": true
