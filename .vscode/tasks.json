    },
    {
      "label": "üé≠ NEONPRO: E2E Tests (Headed)",
      "type": "shell",
      "command": "npx",
      "args": ["playwright", "test", "--headed"],
      "group": "test",
      "detail": "Run E2E tests in headed mode (visible browser)",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        {
          "owner": "playwright",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^\\s*(.*):(\\d+):(\\d+)\\s+(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
