{
  "name": "@neonpro/healthcare-testing",
  "version": "1.0.0",
  "description": "🏥 NeonPro Healthcare Testing Suite - ≥9.9/10 Quality Standards",
  "scripts": {
    "test:healthcare": "jest --config jest.healthcare.config.js",
    "test:healthcare:watch": "jest --config jest.healthcare.config.js --watch",
    "test:healthcare:coverage": "jest --config jest.healthcare.config.js --coverage",
    "test:e2e:healthcare": "playwright test --config playwright.config.ts",
    "test:e2e:healthcare:ui": "playwright test --config playwright.config.ts --ui",
    "test:e2e:healthcare:debug": "playwright test --config playwright.config.ts --debug",
    "test:accessibility": "playwright test accessibility-healthcare.spec.ts",
    "test:security": "playwright test security-healthcare.spec.ts",
    "test:performance": "playwright test performance-healthcare.spec.ts",
    "test:bank-reconciliation": "playwright test bank-reconciliation-fixed.spec.ts",
    "test:analytics": "playwright test analytics-dashboard-fixed.spec.ts",
    "test:regulatory": "playwright test regulatory-documents-fixed.spec.ts",
    "test:all:healthcare": "npm run test:healthcare:coverage && npm run test:e2e:healthcare",
    "test:ci:healthcare": "npm run test:healthcare:coverage && npm run test:e2e:healthcare --reporter=junit",
    "test:report:healthcare": "npx playwright show-report && open coverage/healthcare/healthcare-test-report.html",
    "lint:tests": "eslint 'apps/web/__tests__/**/*.{ts,tsx}' 'playwright/**/*.{ts,tsx}'",
    "format:tests": "cd ../.. && biome format --write 'apps/web/__tests__/**/*.{ts,tsx}' 'tools/testing/**/*.{ts,tsx}'",
    "test:validate:lgpd": "playwright test security-healthcare.spec.ts --grep='LGPD'",
    "test:validate:anvisa": "playwright test regulatory-documents-fixed.spec.ts --grep='ANVISA'",
    "test:validate:cfm": "playwright test regulatory-documents-fixed.spec.ts --grep='CFM'",
    "test:validate:accessibility": "playwright test accessibility-healthcare.spec.ts",
    "test:validate:performance": "playwright test performance-healthcare.spec.ts",
    "test:emergency": "playwright test performance-healthcare.spec.ts --grep='emergency'",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@faker-js/faker": "^8.3.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "healthcare",
    "testing",
    "lgpd",
    "anvisa",
    "cfm",
    "accessibility",
    "performance",
    "security",
    "neonpro",
    "constitutional-healthcare"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "projects": [
      {
        "displayName": "Healthcare Unit Tests",
        "testMatch": [
          "<rootDir>/apps/web/__tests__/healthcare/**/*.test.{js,jsx,ts,tsx}"
        ]
      },
      {
        "displayName": "Healthcare Component Tests",
        "testMatch": [
          "<rootDir>/apps/web/components/**/*.healthcare.test.{js,jsx,ts,tsx}"
        ]
      }
    ]
  },
  "playwright": {
    "testDir": "./playwright/tests",
    "timeout": 30000,
    "projects": [
      {
        "name": "Healthcare Chrome",
        "use": { "browserName": "chromium" }
      },
      {
        "name": "Healthcare Firefox",
        "use": { "browserName": "firefox" }
      },
      {
        "name": "Healthcare Safari",
        "use": { "browserName": "webkit" }
      }
    ]
  }
}
