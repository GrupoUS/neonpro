{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "installCommand": "bun install",
  "buildCommand": "bun run build:vercel",
  "outputDirectory": "dist",
  "framework": null,
  "regions": ["gru1", "iad1"],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/v2/ai/copilot.ts": {
      "maxDuration": 120,
      "memory": 2048
    },
    "api/v2/ai/chat.ts": {
      "maxDuration": 90,
      "memory": 1536
    },
    "api/v2/ai/realtime.ts": {
      "maxDuration": 300,
      "memory": 1024
    },
    "api/healthcare/**/*.ts": {
      "maxDuration": 30,
      "memory": 512,
      "runtime": "nodejs18.x"
    },
    "api/compliance/**/*.ts": {
      "maxDuration": 30,
      "memory": 512,
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.supabase.com https://vercel.com; font-src 'self' data:; frame-ancestors 'none';"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        {
          "key": "X-Healthcare-Compliance",
          "value": "LGPD-ANVISA-CFM"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_ENV": "production",
    "NEXT_PUBLIC_DEPLOYMENT_ENV": "vercel",
    "AI_AGENT_ENABLED": "true",
    "AI_LGPD_COMPLIANCE": "true",
    "AI_ANALYTICS_ENABLED": "true",
    "AUDIT_LOGGING_ENABLED": "true",
    "LOG_LEVEL": "info",
    "HEALTHCARE_MODE": "true",
    "LGPD_COMPLIANCE": "true",
    "ANVISA_COMPLIANCE": "true",
    "CFM_COMPLIANCE": "true",
    "DATA_RESIDENCY": "brazil",
    "BRAZIL_DATA_RESIDENCY": "true",
    "PATIENT_DATA_ANONYMIZATION": "true",
    "HEALTHCARE_BACKUP_RETENTION": "365"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_VERSION": "1.0.0",
      "BUILD_TIME": "$(date -u +'%Y-%m-%dT%H:%M:%SZ')"
    }
  },
  "crons": [
    {
      "path": "/api/cleanup/ai-sessions",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cleanup/expired-predictions",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/health/ai-agents",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/compliance/audit-daily",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/compliance/lgpd-data-retention",
      "schedule": "0 4 * * *"
    }
  ]
}
