{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "installCommand": "bun install",
  "buildCommand": "bun run build:vercel",
  "outputDirectory": "dist",
  "framework": null,
  "regions": ["gru1", "iad1"],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/v2/ai/copilot.ts": {
      "maxDuration": 120,
      "memory": 2048
    },
    "api/v2/ai/chat.ts": {
      "maxDuration": 90,
      "memory": 1536
    },
    "api/v2/ai/realtime.ts": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/api/v2/ai/(.*)",
      "dest": "/api/v2/ai/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://neonpro.healthcare",
        "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE,OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type,Authorization,X-API-Key,X-Request-ID"
      }
    },
    {
      "src": "/trpc/(.*)",
      "dest": "/trpc/$1",
      "methods": ["POST", "GET"],
      "headers": {
        "Access-Control-Allow-Origin": "https://neonpro.healthcare",
        "Access-Control-Allow-Methods": "POST,GET",
        "Access-Control-Allow-Headers": "Content-Type,Authorization"
      }
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_ENV": "production",
    "NEXT_PUBLIC_DEPLOYMENT_ENV": "vercel",
    "AI_AGENT_ENABLED": "true",
    "AI_LGPD_COMPLIANCE": "true",
    "AI_ANALYTICS_ENABLED": "true",
    "AUDIT_LOGGING_ENABLED": "true",
    "LOG_LEVEL": "info"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_VERSION": "1.0.0",
      "BUILD_TIME": "$(date -u +'%Y-%m-%dT%H:%M:%SZ')"
    }
  },
  "crons": [
    {
      "path": "/api/cleanup/ai-sessions",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cleanup/expired-predictions",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/health/ai-agents",
      "schedule": "*/10 * * * *"
    }
  ]
}
