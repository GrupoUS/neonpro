{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    
    // Production optimizations
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo/production.tsbuildinfo",
    "composite": true,
    
    // Output optimization
    "declaration": true,
    "declarationMap": false, // Disabled in production for performance
    "sourceMap": false, // Disabled in production for performance
    "removeComments": true,
    
    // Type checking optimizations
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    // Performance optimizations
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false, // Disable JS in production
    "checkJs": false,
    
    // Advanced optimizations
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "useDefineForClassFields": true,
    
    // Path resolution optimizations
    "baseUrl": ".",
    "maxNodeModuleJsDepth": 0,
    "disableSizeLimit": true,
    "disableReferencedProjectLoad": false,
    "disableSolutionSearching": false
  },
  
  // Include only production files
  "include": [
    "src/**/*",
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "types/**/*"
  ],
  
  // Exclude development and test files
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "**/*.d.ts",
    "coverage",
    "tools/tests/**/*",
    "performance-results/**/*"
  ],
  
  // Build optimizations for CI/CD
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}