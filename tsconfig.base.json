{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@neonpro/*": ["./packages/*/src"],
      "@neonpro/ui": ["./packages/ui/src"],
      "@neonpro/ui/*": ["./packages/ui/src/*"],
      "@neonpro/utils": ["./packages/utils/src"],
      "utils/*": ["./packages/utils/src/*"],
      "@neonpro/types": ["./packages/types/src"],
      "@neonpro/types/*": ["./packages/types/src/*"],
      "@neonpro/shared": ["./packages/shared/src"],
      "@neonpro/shared/*": ["./packages/shared/src/*"],
      "@neonpro/security": ["./packages/security/src"],
      "@neonpro/security/*": ["./packages/security/src/*"],
      "@neonpro/database": ["./packages/database/src"],
      "@neonpro/database/*": ["./packages/database/src/*"],
      "@apps/*": ["./apps/*/src"]
    },
    "composite": true,
    "maxNodeModuleJsDepth": 2,
    "disableSizeLimit": false,
    "disableReferencedProjectLoad": false,
    "disableSolutionSearching": false,
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules", "dist", "build", "**/*.d.ts"],
  "references": [
    { "path": "./packages/agui-protocol" },
    { "path": "./packages/ai-providers" },
    { "path": "./packages/analytics" },
    { "path": "./packages/chat-domain" },
    { "path": "./packages/cli" },
    { "path": "./packages/compliance" },
    { "path": "./packages/config" },
    { "path": "./packages/core-services" },
    { "path": "./packages/database" },
    { "path": "./packages/domain" },
    { "path": "./packages/governance" },
    { "path": "./packages/monitoring" },
    { "path": "./packages/schemas" },
    { "path": "./packages/security" },
    { "path": "./packages/shared" },
    { "path": "./packages/types" },
    { "path": "./packages/ui" },
    { "path": "./packages/utils" },
    { "path": "./packages/validators" },
    { "path": "./apps/ai-agent" },
    { "path": "./apps/api" },
    { "path": "./apps/tools" },
    { "path": "./apps/web" }
  ]
}
