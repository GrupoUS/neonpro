{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node16",
    "lib": ["ES2022"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      // Core 12-package architecture paths
      "@neonpro/database": ["./packages/database/src"],
      "@neonpro/database/*": ["./packages/database/src/*"],
      "@neonpro/ai-services": ["./packages/ai-services/src"],
      "@neonpro/ai-services/*": ["./packages/ai-services/src/*"],
      "@neonpro/healthcare-core": ["./packages/healthcare-core/src"],
      "@neonpro/healthcare-core/*": ["./packages/healthcare-core/src/*"],
      "@neonpro/security": ["./packages/security/src"],
      "@neonpro/security/*": ["./packages/security/src/*"],
      "@neonpro/ui": ["./packages/ui/src"],
      "@neonpro/ui/*": ["./packages/ui/src/*"],
      "@neonpro/utils": ["./packages/utils/src"],
      "@neonpro/utils/*": ["./packages/utils/src/*"],
      "@neonpro/observability": ["./packages/observability/src"],
      "@neonpro/observability/*": ["./packages/observability/src/*"],
      "@neonpro/integrations": ["./packages/integrations/src"],
      "@neonpro/integrations/*": ["./packages/integrations/src/*"],
      "@neonpro/workflows": ["./packages/workflows/src"],
      "@neonpro/workflows/*": ["./packages/workflows/src/*"],
      
      // Legacy package paths (for backward compatibility)
      "@neonpro/*": ["./packages/*/src"],
      "@apps/*": ["./apps/*/src"]
    },
    "composite": true,
    "maxNodeModuleJsDepth": 2,
    "disableSizeLimit": false,
    "disableReferencedProjectLoad": false,
    "disableSolutionSearching": false,
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules", "dist", "build", "**/*.d.ts"],
  "references": [
    // Core 12-package architecture
    { "path": "./packages/database" },
    { "path": "./packages/ai-services" },
    { "path": "./packages/healthcare-core" },
    { "path": "./packages/security" },
    { "path": "./packages/ui" },
    { "path": "./packages/utils" },
    { "path": "./packages/core-services" },
    { "path": "./packages/observability" },
    { "path": "./packages/integrations" },
    { "path": "./packages/workflows" },
    { "path": "./packages/monitoring" },
    
    // Applications
    { "path": "./apps/api" },
    { "path": "./apps/web" }
  ]
}
