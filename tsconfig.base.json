{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      // Core 8-package architecture paths
      "@neonpro/types": ["./packages/types/src"],
      "@neonpro/types/*": ["./packages/types/src/*"],
      "@neonpro/shared": ["./packages/shared/src"],
      "@neonpro/shared/*": ["./packages/shared/src/*"],
      "@neonpro/database": ["./packages/database/src"],
      "@neonpro/database/*": ["./packages/database/src/*"],
      "@neonpro/ai-services": ["./packages/ai-services/src"],
      "@neonpro/ai-services/*": ["./packages/ai-services/src/*"],
      "@neonpro/healthcare-core": ["./packages/healthcare-core/src"],
      "@neonpro/healthcare-core/*": ["./packages/healthcare-core/src/*"],
      "@neonpro/security-compliance": ["./packages/security-compliance/src"],
      "@neonpro/security-compliance/*": ["./packages/security-compliance/src/*"],
      "@neonpro/api-gateway": ["./packages/api-gateway/src"],
      "@neonpro/api-gateway/*": ["./packages/api-gateway/src/*"],
      "@neonpro/ui": ["./packages/ui/src"],
      "@neonpro/ui/*": ["./packages/ui/src/*"],
      // Legacy package paths (for backward compatibility)
      "@neonpro/*": ["./packages/*/src"],
      "@neonpro/security": ["./packages/security/src"],
      "@neonpro/security/*": ["./packages/security/src/*"],
      "@neonpro/utils": ["./packages/utils/src"],
      "utils/*": ["./packages/utils/src/*"],
      "@apps/*": ["./apps/*/src"]
    },
    "composite": true,
    "maxNodeModuleJsDepth": 2,
    "disableSizeLimit": false,
    "disableReferencedProjectLoad": false,
    "disableSolutionSearching": false,
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules", "dist", "build", "**/*.d.ts"],
  "references": [
    // Core 8-package architecture
    { "path": "./packages/types" },
    { "path": "./packages/shared" },
    { "path": "./packages/database" },
    { "path": "./packages/ai-services" },
    { "path": "./packages/healthcare-core" },
    { "path": "./packages/security-compliance" },
    { "path": "./packages/api-gateway" },
    { "path": "./packages/ui" },
    // Legacy packages (maintained for backward compatibility)
    { "path": "./packages/agui-protocol" },
    { "path": "./packages/ai-providers" },
    { "path": "./packages/analytics" },
    { "path": "./packages/chat-domain" },
    { "path": "./packages/cli" },
    { "path": "./packages/compliance" },
    { "path": "./packages/config" },
    { "path": "./packages/core-services" },
    { "path": "./packages/domain" },
    { "path": "./packages/governance" },
    { "path": "./packages/monitoring" },
    { "path": "./packages/schemas" },
    { "path": "./packages/security" },
    { "path": "./packages/utils" },
    { "path": "./packages/validators" },
    // Applications
    { "path": "./apps/ai-agent" },
    { "path": "./apps/api" },
    { "path": "./apps/tools" },
    { "path": "./apps/web" }
  ]
}
