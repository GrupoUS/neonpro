{
  "neonpro_monitoring": {
    "version": "1.0.0",
    "environment": "production",
    "healthcare_compliance": {
      "lgpd_monitoring": {
        "enabled": true,
        "data_residency": "brazil_only",
        "encryption_at_rest": "AES-256-GCM",
        "encryption_in_transit": "TLS-1.3",
        "audit_trail_retention": "10_years",
        "alerts": {
          "data_breach_immediate": true,
          "unauthorized_access": true,
          "data_export_violations": true,
          "consent_management_failures": true
        }
      },
      "anvisa_compliance": {
        "enabled": true,
        "medical_device_software": true,
        "quality_management_system": true,
        "risk_management": true,
        "post_market_surveillance": true,
        "alerts": {
          "quality_deviations": true,
          "risk_assessment_updates": true,
          "regulatory_reporting_deadlines": true,
          "safety_incidents": true
        }
      },
      "cfm_compliance": {
        "enabled": true,
        "professional_standards": true,
        "ethical_guidelines": true,
        "continuing_education": true,
        "alerts": {
          "standards_violations": true,
          "credential_expiry": true,
          "ethics_complaints": true
        }
      }
    },
    "performance_monitoring": {
      "core_web_vitals": {
        "largest_contentful_paint": {
          "target": "<=2.0s",
          "warning_threshold": "1.8s",
          "critical_threshold": "2.5s"
        },
        "interaction_to_next_paint": {
          "target": "<=150ms",
          "warning_threshold": "100ms",
          "critical_threshold": "200ms"
        },
        "cumulative_layout_shift": {
          "target": "<=0.05",
          "warning_threshold": "0.04",
          "critical_threshold": "0.1"
        }
      },
      "api_performance": {
        "response_time": {
          "target": "<=100ms",
          "warning_threshold": "80ms",
          "critical_threshold": "150ms"
        },
        "throughput": {
          "target": "1000 req/min",
          "warning_threshold": "800 req/min",
          "critical_threshold": "500 req/min"
        },
        "error_rate": {
          "target": "<0.1%",
          "warning_threshold": "0.5%",
          "critical_threshold": "1%"
        }
      },
      "database_performance": {
        "query_time": {
          "target": "<=50ms",
          "warning_threshold": "75ms",
          "critical_threshold": "100ms"
        },
        "connection_pool": {
          "target": ">80% available",
          "warning_threshold": "60% available",
          "critical_threshold": "40% available"
        }
      }
    },
    "infrastructure_monitoring": {
      "server_health": {
        "cpu_usage": {
          "warning_threshold": "70%",
          "critical_threshold": "90%"
        },
        "memory_usage": {
          "warning_threshold": "75%",
          "critical_threshold": "90%"
        },
        "disk_space": {
          "warning_threshold": "80%",
          "critical_threshold": "90%"
        },
        "network_latency": {
          "target": "<=50ms",
          "warning_threshold": "75ms",
          "critical_threshold": "100ms"
        }
      },
      "brazilian_infrastructure": {
        "data_centers": ["sao_paulo", "rio_de_janeiro"],
        "cdn_distribution": "brazilian_edge_nodes",
        "load_balancing": "geographic_routing",
        "failover": "automatic_brazilian_failover"
      }
    },
    "business_monitoring": {
      "user_metrics": {
        "active_sessions": {
          "warning_threshold": "<100",
          "critical_threshold": "<50"
        },
        "user_satisfaction": {
          "target": ">=4.5/5",
          "warning_threshold": "<4.0/5",
          "critical_threshold": "<3.5/5"
        },
        "feature_adoption": {
          "target": ">=80%",
          "warning_threshold": "<70%",
          "critical_threshold": "<60%"
        }
      },
      "clinic_operations": {
        "appointment_booking": {
          "success_rate_target": ">=95%",
          "warning_threshold": "<90%",
          "critical_threshold": "<85%"
        },
        "patient_records": {
          "access_time_target": "<=2s",
          "warning_threshold": ">3s",
          "critical_threshold": ">5s"
        },
        "treatment_planning": {
          "completion_rate_target": ">=90%",
          "warning_threshold": "<85%",
          "critical_threshold": "<80%"
        }
      }
    },
    "security_monitoring": {
      "authentication": {
        "failed_login_attempts": {
          "warning_threshold": "5/min",
          "critical_threshold": "10/min"
        },
        "session_anomalies": {
          "unusual_locations": true,
          "concurrent_sessions": true,
          "privilege_escalation": true
        }
      },
      "data_protection": {
        "encryption_status": true,
        "access_control_violations": true,
        "data_export_monitoring": true,
        "audit_trail_integrity": true
      },
      "vulnerability_scanning": {
        "automated_scans": "daily",
        "critical_vulnerabilities": "immediate_alert",
        "high_vulnerabilities": "4_hour_alert",
        "medium_vulnerabilities": "24_hour_alert"
      }
    },
    "alerting_channels": {
      "emergency": {
        "pager_duty": true,
        "sms_alerts": true,
        "phone_calls": true,
        "escalation": "15_minutes"
      },
      "high_priority": {
        "slack_channel": "#neonpro-alerts",
        "email_alerts": true,
        "escalation": "1_hour"
      },
      "medium_priority": {
        "slack_channel": "#neonpro-monitoring",
        "email_digest": "daily"
      },
      "low_priority": {
        "dashboard_notifications": true,
        "weekly_reports": true
      }
    },
    "incident_response": {
      "response_times": {
        "critical": "15_minutes",
        "high": "1_hour",
        "medium": "4_hours",
        "low": "24_hours"
      },
      "escalation_policy": {
        "level_1": "on_call_engineer",
        "level_2": "team_lead",
        "level_3": "engineering_manager",
        "level_4": "cto"
      },
      "post_incident": {
        "root_cause_analysis": "required",
        "follow_up_monitoring": "7_days",
        "knowledge_base_update": "required"
      }
    },
    "compliance_reporting": {
      "lgpd_reports": {
        "data_processing_inventory": "monthly",
        "data_breach_notifications": "immediate",
        "audit_trail_reports": "quarterly",
        "consent_management_reports": "monthly"
      },
      "anvisa_reports": {
        "quality_metrics": "monthly",
        "safety_monitoring": "weekly",
        "regulatory_compliance": "quarterly"
      },
      "cfm_reports": {
        "professional_standards": "quarterly",
        "continuing_education": "monthly"
      }
    },
    "dashboards": {
      "executive": {
        "business_health": true,
        "compliance_status": true,
        "user_satisfaction": true,
        "financial_metrics": true
      },
      "technical": {
        "infrastructure_health": true,
        "application_performance": true,
        "security_status": true,
        "deployment_status": true
      },
      "healthcare": {
        "clinic_operations": true,
        "patient_data_protection": true,
        "regulatory_compliance": true,
        "quality_metrics": true
      }
    }
  }
}