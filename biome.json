{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": true,
    "maxSize": 1048576
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 120,
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "noUnusedTemplateLiteral": "warn",
        "useImportType": "error",
        "noMagicNumbers": "off"
      },
      "performance": {
        "noAccumulatingSpread": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "useAwait": "warn"
      },
      "nursery": {
        "useConsistentTypeDefinitions": "warn"
      },
      "complexity": {
        "useOptionalChain": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/tsconfig*.json", "**/jsconfig*.json"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    },
    {
      "includes": [
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/.next/**",
        "**/.turbo/**",
        "**/coverage/**",
        "**/playwright-report/**",
        "**/test-results/**",
        "**/logs/**",
        "**/temp-*",
        "**/*.log",
        "**/*.cache",
        "**/.*cache/**",
        "**/.git/**",
        "**/.vscode/**",
        "**/supabase/migrations/**",
        "**/archon/original_archon/**",
        "**/serena/test/**",
        "**/serena/**",
        "**/temp-broken-files/**",
        "**/.tmp.*/**",
        "**/pnpm-lock.yaml",
        "**/package-lock.json*",
        "**/*.tsbuildinfo",
        "**/tsconfig.tsbuildinfo",
        "**/.env*",
        "**/scripts/*.ps1",
        "**/scripts/*.sh",
        "**/validate-*.mjs",
        "**/test-*.ts",
        "**/rpc-*.ts",
        "**/backend-*.txt"
      ],
      "formatter": {
        "enabled": false
      },
      "linter": {
        "enabled": false
      }
    }
  ],
  "extends": ["ultracite"]
}
