{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/auth/*": ["src/auth/*"],
      "@/compliance/*": ["src/compliance/*"],
      "@/utils/*": ["src/utils/*"]
    },
    "composite": true,
    "module": "Node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "../types" },
    { "path": "../shared" },
    { "path": "../database" },
    { "path": "../healthcare-core" }
  ]
}
