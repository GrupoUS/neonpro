{
  "name": "@neonpro/security",
  "version": "1.0.0",
  "description": "Security, authentication, and compliance frameworks for NeonPro healthcare platform",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    },
    "./auth/*": {
      "types": "./dist/src/auth/*.d.ts",
      "import": "./dist/src/auth/*.js",
      "require": "./dist/src/auth/*.js"
    },
    "./compliance/*": {
      "types": "./dist/src/compliance/*.d.ts",
      "import": "./dist/src/compliance/*.js",
      "require": "./dist/src/compliance/*.js"
    }
  },
  "scripts": {
    "build": "bun x tsc -b",
    "dev": "tsc -w -p tsconfig.json",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist",
    "test": "bun test run",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "audit": "bunx audit",
    "compliance-check": "tsx scripts/compliance-check.ts"
  },
  "dependencies": {
    "@neonpro/types": "workspace:*",
    "@neonpro/shared": "workspace:*",
    "@neonpro/database": "workspace:*",
    "@neonpro/healthcare-core": "workspace:*",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "jose": "^5.9.6",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.19.13",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "tsx": "^4.6.2"
  },
  "files": [
    "dist",
    "src/**/*"
  ],
  "keywords": [
    "security",
    "authentication",
    "compliance",
    "lgpd",
    "anvisa",
    "healthcare-security",
    "authorization",
    "audit"
  ],
  "author": "NeonPro Team",
  "license": "MIT",
  "publishConfig": {
    "access": "restricted"
  }
}
