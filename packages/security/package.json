    "test:watch": "vitest --watch",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "bcryptjs": "^2.4.3",
    "jose": "^5.1.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.0",
    "@types/react": "^19.1.10",
    "next": "^15.4.6",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@neonpro/config": "workspace:*",
    "@neonpro/types": "workspace:*",
    "next": ">=14.0.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "restricted"
