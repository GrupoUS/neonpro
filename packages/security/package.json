{
  "name": "@neonpro/security",
  "version": "0.1.0",
  "description": "Security infrastructure for NeonPro healthcare platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./auth/enterprise": {
      "types": "./dist/auth/enterprise/index.d.ts",
      "import": "./dist/auth/enterprise/index.mjs",
      "require": "./dist/auth/enterprise/index.js"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc -w -p tsconfig.build.json",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "dprint fmt",
    "format:check": "dprint check",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "coverage": "vitest --run --coverage",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@neonpro/database": "workspace:*"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.13",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.12",
    "@types/speakeasy": "^2.0.10",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@neonpro/config": "0.1.0",
    "@neonpro/types": "0.1.0",
    "next": ">=14.0.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}
