{
  "name": "@neonpro/security",
  "version": "0.1.0",
  "description": "Security infrastructure for NeonPro healthcare platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npx tsc --project tsconfig.build.json",
    "dev": "tsup --watch",
    "lint": "biome check src/",
