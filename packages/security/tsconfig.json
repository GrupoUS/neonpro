{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "Node16",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./.tsbuildinfo-security",
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/index.ts",
    "src/utils.ts",
    "src/console-manager.ts",
    "src/cryptography.ts",
    "src/encryption.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/monitoring/**/*",
    "src/types/**/*"
  ],
  "references": [
    { "path": "../utils" },
    { "path": "../database" },
    { "path": "../healthcare-core" }
  ]
}
