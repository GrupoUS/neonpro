{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["vitest"],
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "tests/**/*"
  ],
  "references": [
    { "path": "../database" },
    { "path": "../types" },
    { "path": "../utils" },
    { "path": "../config" },
    { "path": "../shared" },
    { "path": "../domain" }
  ]
}
