{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "types": ["vitest"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**/*"
  ],
  "references": [
    { "path": "../database" },
    { "path": "../types" },
    { "path": "../utils" },
    { "path": "../config" },
    { "path": "../shared" }
  ]
}
