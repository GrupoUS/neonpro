{
  "name": "@neonpro/schemas",
  "version": "1.0.0",
  "description": "Shared validation schemas for NeonPro healthcare platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun x tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage"
  },
  "dependencies": {
    "zod": "^3.22.0",
    "@neonpro/validators": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "zod": "^3.22.0"
  },
  "keywords": [
    "schemas",
    "validation",
    "healthcare",
    "neonpro"
  ],
  "author": "NeonPro Team",
  "license": "MIT"
}
