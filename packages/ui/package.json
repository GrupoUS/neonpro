{
  "name": "@neonpro/ui",
  "version": "1.0.0",
  "description": "React component library with healthcare-specific components for NeonPro platform",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    },
    "./components/*": {
      "types": "./dist/src/components/*.d.ts",
      "import": "./dist/src/components/*.js",
      "require": "./dist/src/components/*.js"
    },
    "./forms/*": {
      "types": "./dist/src/components/forms/*.d.ts",
      "import": "./dist/src/components/forms/*.js",
      "require": "./dist/src/components/forms/*.js"
    },
    "./charts/*": {
      "types": "./dist/src/components/charts/*.d.ts",
      "import": "./dist/src/components/charts/*.js",
      "require": "./dist/src/components/charts/*.js"
    },
    "./hooks/*": {
      "types": "./dist/src/hooks/*.d.ts",
      "import": "./dist/src/hooks/*.js",
      "require": "./dist/src/hooks/*.js"
    },
    "./utils/*": {
      "types": "./dist/src/utils/*.d.ts",
      "import": "./dist/src/utils/*.js",
      "require": "./dist/src/utils/*.js"
    }
  },
  "scripts": {
    "build": "bun x tsc -b",
    "dev": "tsc -w -p tsconfig.json",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist",
    "test": "bun test run",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@neonpro/healthcare-core": "workspace:*",
    "@neonpro/utils": "workspace:*",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-select": "^2.1.3",
    "@radix-ui/react-dialog": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "lucide-react": "^0.478.0",
    "recharts": "^2.13.3",
    "react-hook-form": "^7.54.2",
    "@hookform/resolvers": "^3.10.0",
    "valibot": "^1.1.0",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "@types/node": "^20.19.13",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.8.0",
    "tsx": "^4.6.2",
    "tailwindcss": "^4.1.13",
    "@tailwindcss/postcss": "^4.1.13"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "files": [
    "dist",
    "src/**/*"
  ],
  "keywords": [
    "react",
    "components",
    "ui",
    "healthcare",
    "medical",
    "accessibility",
    "wcag",
    "shadcn",
    "tailwind"
  ],
  "author": "NeonPro Team",
  "license": "MIT",
  "publishConfig": {
    "access": "restricted"
  }
}
