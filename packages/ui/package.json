{
  "name": "@neonpro/ui",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared React UI components for NeonPro aesthetic clinic platform, inspired by shadcn/ui with healthcare accessibility focus",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./theme-provider": {
      "import": "./src/theme-provider.tsx",
      "types": "./src/theme-provider.tsx"
    },
    "./config": {
      "import": "./src/config/theme.config.ts",
      "types": "./src/config/theme.config.ts"
    },
    "./theme-inheritance": {
      "import": "./src/lib/theme-inheritance.ts",
      "types": "./src/lib/theme-inheritance.ts"
    },
    "./globals.css": "./src/globals.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node ../../scripts/tsc-wrapper.cjs --project tsconfig.typecheck.json",
    "dev": "node ../../scripts/tsc-wrapper.cjs --watch",
    "clean": "rm -rf dist",
    "type-check": "node ../../scripts/tsc-wrapper.cjs --project tsconfig.typecheck.json",
    "dev:bun": "vite dev --force",
    "build:bun": "vite build --mode production && node ../../scripts/tsc-wrapper.cjs --emitDeclarationOnly",
    "build:analyze": "vite build --mode analyze",
    "test:bun": "vitest run --reporter=dot",
    "test:watch:bun": "vitest watch --reporter=dot",
    "type-check:bun": "node ../../scripts/tsc-wrapper.cjs --noEmit",
    "clean:bun": "rm -rf dist node_modules/.cache",
    "format:bun": "biome format . --write",
    "lint:bun": "oxlint . --fix",
    "perf:test": "vitest run --reporter=verbose --isolate",
    "setup:test": "bun install && bun run build",
    "build:lib": "tsup",
    "build:types": "node ../../scripts/tsc-wrapper.cjs --emitDeclarationOnly",
    "dev:storybook": "vite dev --config .storybook/vite.config.ts",
    "build:storybook": "vite build --config .storybook/vite.config.ts",
    "test:visual": "playwright test tests/visual/",
    "test:accessibility": "axe tests/accessibility/",
    "export:components": "bun run src/export-components.ts",
    "analyze:bundle": "bun run build && webpack-bundle-analyzer stats.json",
    "optimize:images": "bun run src/optimize-images.ts"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.10.2",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.16.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "typescript": "5.9.2",
    "vite": "^5.0.0",
    "vitest-axe": "0.1.0"
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "1.1.7",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-scroll-area": "^1.1.1",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-toast": "1.2.15",
    "@tabler/icons-react": "3.35.0",
    "@tanstack/react-table": "^8.20.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^1.0.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.400.0",
    "next-themes": "^0.3.0",
    "react-day-picker": "^8.10.1",
    "react-hook-form": "^7.63.0",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "zod": "4.1.11"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "shadcn",
    "healthcare",
    "aesthetic"
  ],
  "author": "NeonPro Team",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  }
}
