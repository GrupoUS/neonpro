{
  "name": "@neonpro/ui",
  "version": "0.1.0",
  "description": "NeonPro UI components library - KokonutUI and Aceternity gradient buttons",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun x tsc --noEmit",
    "dev": "bun x tsc -w -p tsconfig.json",
    "lint": "eslint src --fix --ext .ts,.tsx",
    "type-check": "bun x tsc --noEmit",
    "test": "bun test --run",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@remixicon/react": "^4.6.0",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^1.1.1",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.460.0",
    "motion": "^12.23.12",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react-day-picker": "^9.9.0",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.5.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@swc/core": "^1.13.5",
    "@types/react": "^18.0.0 || ^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "oxlint": "^1.17.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "framer-motion": "^12.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./lib/utils": {
      "types": "./src/utils/ui-utils.ts",
      "import": "./src/utils/ui-utils.ts",
      "require": "./src/utils/ui-utils.ts"
    },
    "./theme": {
      "types": "./src/theme/index.ts",
      "import": "./src/theme/index.ts",
      "require": "./src/theme/index.ts"
    }
  }
}
