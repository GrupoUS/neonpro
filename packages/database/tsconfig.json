{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@neonpro/types": ["../types/src"],
      "@neonpro/types/*": ["../types/src/*"]
    }
  },
  "include": ["src/**/*", "prisma/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.test.tsx"],
  "references": [{ "path": "../types" }]
}
