{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "baseUrl": ".",
    "tsBuildInfoFile": "./.tsbuildinfo-database",
    "paths": {
      "@neonpro/healthcare-core": ["../healthcare-core/src"],
      "@neonpro/healthcare-core/*": ["../healthcare-core/src/*"],
      "@neonpro/utils": ["../utils/src"],
      "@neonpro/utils/*": ["../utils/src/*"],
      "@neonpro/types": ["../types/src"],
      "@neonpro/types/*": ["../types/src/*"],
      "@neonpro/shared": ["../shared/src"],
      "@neonpro/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.test.tsx"],
  "references": [
    { "path": "../types" },
    { "path": "../shared" },
    { "path": "../utils" },
    { "path": "../healthcare-core" }
  ]
}
