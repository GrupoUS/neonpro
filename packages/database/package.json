{
  "name": "@neonpro/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "import": "./dist/services/*.js",
      "require": "./dist/services/*.js"
    }
  },
  "scripts": {
    "build": "bunx prisma generate && tsc -p tsconfig-isolado.json",
    "dev": "tsc -w -p tsconfig.json",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist",
    "test": "bun test run",
    "test:watch": "bun test --watch",
    "test:compliance": "tsx tests/test-runner.ts",
    "test:health": "tsx tests/test-runner.ts | head -20",
    "test:ci": "tsx tests/test-runner.ts && npm run test:coverage",
    "test:coverage": "bun test --coverage",
    "lint": "echo 'lint placeholder'",
    "prepare": "echo 'prepare script disabled for workspace install'",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "sync-types": "tsx scripts/sync-types.ts",
    "validate-schema": "npm run prisma:generate && npm run sync-types",
    "supabase:types": "supabase gen types typescript --local > src/types/supabase-auto.ts || echo 'Supabase not running locally, using manual sync'",
    "sync": "npm run validate-schema && npm run build"
  },
  "dependencies": {
    "@neonpro/utils": "workspace:*",
    "@prisma/adapter-pg": "^6.16.1",
    "@prisma/client": "^5.22.0",
    "@supabase/supabase-js": "2.58.0",
    "prisma": "^5.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
