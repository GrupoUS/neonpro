{
  "name": "@neonpro/database",
  "version": "0.1.0",
  "description": "Database utilities and types for NeonPro with Supabase",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./migrations": {
      "types": "./dist/migrations/index.d.ts",
      "default": "./dist/migrations/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome lint .",
    "type-check": "tsc --noEmit",
    "db:generate": "supabase gen types typescript --local > src/types/database.ts"
  },
  "dependencies": {
    "@neonpro/types": "workspace:*",
    "@supabase/supabase-js": "^2.45.4",
    "drizzle-orm": "^0.33.0"
  },
  "devDependencies": {
    "@neonpro/config": "workspace:*",
    "drizzle-kit": "^0.24.0",
    "supabase": "^1.191.3",
    "typescript": "^5.5.4"
  }
}
