{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"]
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.test.tsx"],
	"references": [
		{
			"path": "../types"
		},
		{
			"path": "../ui"
		},
		{
			"path": "../db"
		}
	]
}
