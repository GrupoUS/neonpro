{
  "extends": "../typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/governance/*": ["./src/governance/*"],
      "@neonpro/types": ["../types/src"],
      "@neonpro/core-services": ["../core-services/src"],
      "@neonpro/utils": ["../utils/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.*", "**/*.spec.*"],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../core-services" 
    },
    {
      "path": "../utils"
    }
  ]
}