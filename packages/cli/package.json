{
  "name": "@neonpro/cli-helpers",
  "version": "1.0.0",
  "description": "Centralized CLI helpers for structured JSON output and proper exit handling",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "bun x tsc --project tsconfig.json",
    "build:watch": "tsc --watch --project tsconfig.json",
    "clean": "rm -rf dist/",
    "dev": "tsc --watch",
    "test": "bun test",
    "test:unit": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "echo 'lint placeholder'",
    "lint:fix": "echo 'lint fix placeholder'",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/ __tests__/",
    "format:check": "prettier --check src/ __tests__/",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "prepublishOnly": "npm run quality && npm run build && npm run test"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "prettier": "^3.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "cli",
    "exit-helper",
    "structured-output",
    "json",
    "neonpro"
  ],
  "author": "NeonPro Team",
  "license": "MIT"
}
