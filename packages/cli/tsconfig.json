{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmitOnError": true,
    "moduleDetection": "force",
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "__tests__"],
  "references": [
    { "path": "../types" },
    { "path": "../utils" }
  ]
}
