{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "paths": {
      "@neonpro/core-services": ["../core-services/dist"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "src/services/redis-cache-backend.ts", "src/services/winston-logging/**", "src/services/structured-logging.ts"],
  "references": [
    { "path": "../types" },
    { "path": "../utils" }
  ]
}
