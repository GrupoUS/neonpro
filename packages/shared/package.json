{
  "name": "@neonpro/shared",
  "version": "1.0.0",
  "description": "Shared utilities, constants and common functions for NeonPro healthcare platform",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.js", 
      "types": "./dist/utils.d.ts"
    },
    "./validators": {
      "import": "./dist/validators.js",
      "types": "./dist/validators.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@neonpro/types": "workspace:*",
    "date-fns": "^3.6.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.15.0",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "src/**/*"
  ],
  "keywords": [
    "healthcare",
    "shared",
    "utilities",
    "constants",
    "lgpd",
    "anvisa",
    "brazil",
    "compliance"
  ],
  "author": "NeonPro Team",
  "license": "MIT",
  "publishConfig": {
    "access": "restricted"
  }
}