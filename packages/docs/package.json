{
  "name": "@neonpro/docs",
  "version": "1.0.0",
  "description": "NeonPro Documentation Generation and Validation Suite - Enterprise-grade API documentation, ADRs, and runbooks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "generate:openapi": "tsx src/openapi/generator.ts",
    "generate:adrs": "tsx src/generators/adr-generator.ts",
    "validate:api": "tsx src/validators/api-validator.ts",
    "validate:schemas": "tsx src/validators/schema-validator.ts",
    "generate:postman": "tsx src/generators/postman-generator.ts",
    "generate:sdk": "tsx src/generators/sdk-generator.ts",
    "docs:full": "pnpm generate:openapi && pnpm generate:adrs && pnpm validate:api"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^5.10.5",
    "openapi-types": "^12.1.3",
    "json-schema": "^0.4.0",
    "yaml": "^2.3.4",
    "mustache": "^4.2.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.5",
    "@types/inquirer": "^9.0.7",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "documentation",
    "openapi",
    "swagger",
    "adr",
    "healthcare",
    "neonpro"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GrupoUS/neonpro",
    "directory": "packages/docs"
  },
  "license": "MIT",
  "author": "GrupoUS <dev@grupous.com>",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./openapi": {
      "types": "./dist/openapi/index.d.ts",
      "import": "./dist/openapi/index.js"
    },
    "./validators": {
      "types": "./dist/validators/index.d.ts",
      "import": "./dist/validators/index.js"
    },
    "./generators": {
      "types": "./dist/generators/index.d.ts",
      "import": "./dist/generators/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md"
  ]
}
