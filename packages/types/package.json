{
  "name": "@neonpro/types",
  "version": "1.0.0",
  "description": "NeonPro shared TypeScript types and interfaces",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "oxlint src",
    "lint:fix": "oxlint src --fix",
    "format": "dprint fmt",
    "format:check": "dprint check",
    "test": "vitest --run",
    "test:watch": "vitest",
    "coverage": "vitest --run --coverage"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
