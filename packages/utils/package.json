{
  "name": "@neonpro/utils",
  "version": "1.0.0",
  "description": "NeonPro shared utilities and helper functions",
  "private": true,
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    },
    "./validation": {
      "types": "./dist/src/validation.d.ts",
      "import": "./dist/src/validation.js",
      "require": "./dist/src/validation.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "oxlint src",
    "lint:fix": "oxlint src --fix",
    "format": "dprint fmt",
    "format:check": "dprint check",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest",
    "coverage": "vitest --run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@neonpro/database": "workspace:*",
    "@supabase/supabase-js": "^2.45.4",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "@types/react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.17.1",
    "@types/react": "^19.1.1",
    "next": "^15.1.3",
    "react": "^19.1.1",
    "typescript": "^5.9.2"
  }
}
