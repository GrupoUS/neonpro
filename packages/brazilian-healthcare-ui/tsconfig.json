{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"jsx": "react-jsx",
		"incremental": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["dist", "node_modules", "**/*.test.*", "**/*.spec.*"]
}
