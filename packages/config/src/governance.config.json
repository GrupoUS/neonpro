{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "0.1.0",
  "kpis": [
    {
      "id": "KPI-NO_SHOW",
      "name": "No-show Rate",
      "formula": "missed_appts / total_appts",
      "baseline": "NEEDS_CLARIFICATION_FR-022",
      "targets": { "phase1": "-5pp", "phase2": "-10pp" },
      "owner": "Data Steward",
      "cadence": "Monthly",
      "source": "Scheduling DB",
      "status": "Provisional",
      "escalationPathId": "ESC-003",
      "measurement": "Pending baseline source selection"
    },
    {
      "id": "KPI-AI-HALLUCINATION",
      "name": "AI Hallucination Rate",
      "formula": "incorrect / total",
      "baseline": null,
      "targets": { "phase1": "<5%", "phase2": "<2%" },
      "owner": "AI Steward",
      "cadence": "NEEDS_CLARIFICATION_FR-024",
      "source": "Eval Logs",
      "status": "Provisional",
      "escalationPathId": "ESC-001",
      "measurement": "NEEDS_CLARIFICATION_FR-023"
    },
    {
      "id": "KPI-COMPLIANCE-SLA",
      "name": "Compliance SLA Adherence",
      "formula": "met_sla / total_sla",
      "baseline": 0,
      "targets": { "phase1": "90%", "phase2": "100%" },
      "owner": "Compliance Officer",
      "cadence": "Monthly",
      "source": "SLA Tracker",
      "status": "Active",
      "escalationPathId": "ESC-002"
    },
    {
      "id": "KPI-PHI-ENCRYPT",
      "name": "PHI Encryption Compliance",
      "formula": "encrypted_segments / total_segments",
      "baseline": 0,
      "targets": { "phase1": "100%", "phase2": "100%" },
      "owner": "Security Officer",
      "cadence": "Monthly",
      "source": "Security Audit",
      "status": "Active",
      "escalationPathId": "ESC-004"
    },
    {
      "id": "KPI-RLS-ACCESS",
      "name": "RLS Access Control",
      "formula": "authorized_requests / total_requests",
      "baseline": 0,
      "targets": { "phase1": "100%", "phase2": "100%" },
      "owner": "Compliance Officer",
      "cadence": "Quarterly",
      "source": "Auth Logs",
      "status": "Active",
      "escalationPathId": "ESC-005"
    }
  ],
  "escalationPaths": [
    {
      "id": "ESC-001",
      "triggerCondition": "AI hallucination threshold exceeded 2 consecutive periods",
      "notificationTargets": ["AI Steward"],
      "actions": ["Run prompt review", "Enable deterministic mode"],
      "timeToResponse": "2d",
      "fallbackReference": "deterministic_mode"
    },
    {
      "id": "ESC-002",
      "triggerCondition": "Compliance SLA breach",
      "notificationTargets": ["Compliance Officer"],
      "actions": ["Root cause analysis", "Issue remediation plan"],
      "timeToResponse": "5d"
    },
    {
      "id": "ESC-003",
      "triggerCondition": "Any core KPI threshold miss 2 consecutive periods",
      "notificationTargets": ["Product Owner"],
      "actions": ["Backlog reprioritization"],
      "timeToResponse": "7d"
    },
    {
      "id": "ESC-004",
      "triggerCondition": "Encryption compliance below target",
      "notificationTargets": ["Security Officer"],
      "actions": ["Investigate storage gap", "Patch configuration"],
      "timeToResponse": "3d"
    },
    {
      "id": "ESC-005",
      "triggerCondition": "Unauthorized access attempt detected",
      "notificationTargets": ["Compliance Officer", "Security Officer"],
      "actions": ["Review audit logs", "Validate RLS predicates"],
      "timeToResponse": "1d"
    }
  ]
}
