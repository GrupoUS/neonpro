{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"files": {
		"includes": ["src/**/*", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
	}
}
