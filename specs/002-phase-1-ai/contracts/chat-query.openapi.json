{
  "openapi": "3.1.0",
  "info": {"title": "Chat Query Endpoint", "version": "0.1.0"},
  "paths": {
    "/api/v1/chat/query": {
      "post": {
        "summary": "Submit a contextual question",
        "requestBody": {"required": true, "content": {"application/json": {"schema": {"type": "object", "required": ["question"], "properties": {"question": {"type": "string", "maxLength": 4000}, "sessionId": {"type": "string", "format": "uuid"}}}}}},
        "responses": {
          "200": {"description": "Streaming answer initiated (SSE)", "content": {"text/event-stream": {}}},
          "400": {"description": "Validation error"},
          "403": {"description": "Consent or role violation"},
          "429": {"description": "Fairness limit triggered"}
        }
      }
    }
  }
}
